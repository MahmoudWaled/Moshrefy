@model Moshrefy.Web.Models.Enrollment.UpdateEnrollmentVM
@{
    ViewData["Title"] = "Edit Enrollment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="Enrollment" asp-action="Index"><i class="ti ti-users"></i> Enrollments</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Enrollment" asp-action="Details" asp-route-id="@ViewBag.EnrollmentId">Details</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-edit"></i> Edit Enrollment</h2>
        </div>
        <div class="col-auto ms-auto">
            <a asp-action="Details" asp-route-id="@ViewBag.EnrollmentId" class="btn">
                <i class="ti ti-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <form asp-action="Edit" method="post">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="ti ti-edit me-2"></i>Enrollment Information</h3>
            </div>
            <div class="card-body">
              <div class="alert alert-info mb-4">
                <h4 class="alert-title"><i class="ti ti-info-circle me-2"></i>Note:</h4>
                <p class="mb-0">Student and Course cannot be changed after enrollment creation. You can only activate or deactivate the enrollment.</p>
              </div>

              <!-- Student (readonly) -->
              <div class="mb-3">
                <label class="form-label">Student</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-user"></i></span>
                  <input type="text" class="form-control" value="@ViewBag.StudentName" readonly>
                </div>
              </div>

              <!-- Course (readonly) -->
              <div class="mb-3">
                <label class="form-label">Course</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-book"></i></span>
                  <input type="text" class="form-control" value="@ViewBag.CourseName" readonly>
                </div>
              </div>

              <!-- Academic Year (readonly) -->
              <div class="mb-3">
                <label class="form-label">Academic Year</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-calendar"></i></span>
                  <input type="text" class="form-control" value="@ViewBag.AcademicYearName" readonly>
                </div>
              </div>

              <hr class="my-4">

              <!-- IsActive Toggle (editable) -->
              <div class="mb-3">
                <label class="form-label">Status</label>
                <div>
                  <label class="form-check form-switch">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                    <span class="form-check-label">
                      <span id="statusLabel">@(Model.IsActive ? "Active" : "Inactive")</span>
                    </span>
                  </label>
                  <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <small class="form-hint">Toggle to activate or deactivate this enrollment</small>
              </div>

            </div>
            <div class="card-footer text-end">
              <div class="d-flex">
                <a asp-action="Details" asp-route-id="@ViewBag.EnrollmentId" class="btn btn-link">Cancel</a>
                <button type="submit" class="btn btn-primary ms-auto">
                  <i class="ti ti-device-floppy me-2"></i>Save Changes
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Update status label when toggle changes
        $('#IsActive').change(function() {
            if ($(this).is(':checked')) {
                $('#statusLabel').text('Active');
            } else {
                $('#statusLabel').text('Inactive');
            }
        });
    </script>
}
