@model Moshrefy.Web.Models.User.CreateUserVM
@{
    ViewData["Title"] = "Add Team Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Admin</div>
        <h2 class="page-title"><i class="ti ti-user-plus"></i> Add New Team Member</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Member Information</h3>
          </div>
          <form asp-action="CreateUser" method="post">
            <div class="card-body">
              <!-- Personal Information -->
              <div class="mb-3">
                <label class="form-label" asp-for="Name">Full Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="UserName">Username <span class="text-danger">*</span></label>
                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                <small class="form-hint">This will be used for logging in</small>
                <span asp-validation-for="UserName" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Password">Password <span class="text-danger">*</span></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create a strong password" />
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>

              <!-- Role Selection -->
              <div class="mb-3">
                <label class="form-label">Team Member Type <span class="text-danger">*</span></label>
                <select asp-for="RoleName" class="form-select" id="roleSelect">
                  <option value="">-- Select Type --</option>
                  <option value="Employee">Employee</option>
                  <option value="Manager">Manager</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
              </div>

              <!-- Role Description -->
              <div class="alert alert-info" id="roleDescription" style="display: none;">
                <div class="d-flex">
                  <div><i class="ti ti-info-circle icon me-2"></i></div>
                  <div id="roleDescriptionText"></div>
                </div>
              </div>

              <!-- Contact Information -->
              <hr />
              <h4 class="mb-3"><i class="ti ti-address-book me-2"></i>Contact Details</h4>

              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <!-- Info Box -->
              <div class="alert alert-info">
                <div class="d-flex">
                  <div><i class="ti ti-info-circle icon me-2"></i></div>
                  <div>
                    <strong>Note</strong><br>
                    This team member will be able to access your center's system. You can disable their access anytime from the team list.
                  </div>
                </div>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Users" class="btn btn-outline-secondary me-2">
                <i class="ti ti-x"></i> Cancel
              </a>
              <button type="submit" class="btn btn-action-create">
                <i class="ti ti-check"></i> Add Team Member
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            const roleDescriptions = {
                'Employee': 'Regular team member who can handle day-to-day tasks like recording attendance, managing student information, and basic operations.',
                'Manager': 'Senior team member with additional permissions to manage finances, generate reports, and oversee operations.'
            };

            $('#roleSelect').change(function() {
                var selectedRole = $(this).val();
                if (selectedRole && roleDescriptions[selectedRole]) {
                    $('#roleDescriptionText').text(roleDescriptions[selectedRole]);
                    $('#roleDescription').slideDown();
                } else {
                    $('#roleDescription').slideUp();
                }
            });
        });
    </script>
}
