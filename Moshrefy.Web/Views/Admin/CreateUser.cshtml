@model Moshrefy.Web.Models.User.CreateUserVM
@{
    ViewData["Title"] = "Add Team Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-user-plus"></i> Add New Team Member</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Users">My Team</a></li>
                    <li class="breadcrumb-item active">Add Member</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Member Information</h3>
                    </div>
                    <form asp-action="CreateUser" method="post">
                        <div class="card-body">
                            <!-- Success/Error Messages -->
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <i class="icon fas fa-check"></i> @TempData["SuccessMessage"]
                                </div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <i class="icon fas fa-ban"></i> @TempData["ErrorMessage"]
                                </div>
                            }

                            <!-- Personal Information -->
                            <div class="form-group">
                                <label asp-for="Name">Full Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserName">Username <span class="text-danger">*</span></label>
                                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                                <small class="form-text text-muted">This will be used for logging in</small>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password <span class="text-danger">*</span></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Create a strong password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Role Selection -->
                            <div class="form-group">
                                <label>Team Member Type <span class="text-danger">*</span></label>
                                <select asp-for="RoleName" class="form-control" id="roleSelect">
                                    <option value="">-- Select Type --</option>
                                    <option value="Employee">Employee</option>
                                    <option value="Manager">Manager</option>
                                </select>
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>

                            <!-- Role Description -->
                            <div class="alert alert-info alert-hidden" id="roleDescription">
                                <i class="icon fas fa-info-circle"></i>
                                <span id="roleDescriptionText"></span>
                            </div>

                            <!-- Contact Information -->
                            <hr />
                            <h5><i class="fas fa-address-book"></i> Contact Details</h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email">Email Address</label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Info Box -->
                            <div class="callout callout-info">
                                <h5><i class="fas fa-info-circle"></i> Note</h5>
                                <p>This team member will be able to access your center's system. You can disable their access anytime from the team list.</p>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Add Team Member
                            </button>
                            <a asp-action="Users" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            const roleDescriptions = {
                'Employee': 'Regular team member who can handle day-to-day tasks like recording attendance, managing student information, and basic operations.',
                'Manager': 'Senior team member with additional permissions to manage finances, generate reports, and oversee operations.'
            };

            $('#roleSelect').change(function() {
                var selectedRole = $(this).val();
                
                if (selectedRole && roleDescriptions[selectedRole]) {
                    $('#roleDescriptionText').text(roleDescriptions[selectedRole]);
                    $('#roleDescription').slideDown();
                } else {
                    $('#roleDescription').slideUp();
                }
            });
        });
    </script>
}

