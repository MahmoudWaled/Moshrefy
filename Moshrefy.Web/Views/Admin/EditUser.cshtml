@model Moshrefy.Web.Models.User.UpdateUserVM
@{
    ViewData["Title"] = "Edit Team Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Index"><i class="ti ti-home"></i> My Center</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Admin" asp-action="Users">My Team</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-user-edit"></i> Edit Team Member</h2>
        </div>
        <div class="col-auto ms-auto">
            <button type="button" onclick="goBack()" class="btn">
                <i class="ti ti-arrow-left"></i> Back
            </button>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <form asp-action="EditUser" asp-route-id="@ViewBag.UserId" method="post">
      <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
          <!-- Personal Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-primary text-white me-3">
                  <i class="ti ti-user"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Personal Information</h3>
                  <small class="text-muted">Update member's basic details</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-12 mb-3">
                  <label class="form-label required" asp-for="Name">Full Name</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-user"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                  </div>
                  <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-12 mb-3">
                  <label class="form-label required" asp-for="UserName">Username</label>
                  <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                  </div>
                  <small class="form-hint"><i class="ti ti-info-circle"></i> This is used for logging in</small>
                  <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-info text-white me-3">
                  <i class="ti ti-address-book"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Contact Information</h3>
                  <small class="text-muted">Update contact details</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" asp-for="Email">Email Address</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-mail"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" />
                  </div>
                  <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" />
                  </div>
                  <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
          <!-- Access Control Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-success text-white me-3">
                  <i class="ti ti-key"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Access Control</h3>
                  <small class="text-muted">Manage member access</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="form-selectgroup form-selectgroup-boxes d-flex flex-column">
                <label class="form-selectgroup-item flex-fill">
                  <input type="checkbox" asp-for="IsActive" class="form-check-input" />
                  <div class="form-selectgroup-label d-flex align-items-center p-3 border rounded">
                    <div>
                      <i class="ti ti-shield-check text-success me-2" style="font-size: 1.5rem;"></i>
                    </div>
                    <div>
                      <div class="font-weight-medium">Access Enabled</div>
                      <div class="text-muted small">Member can log in to the system</div>
                    </div>
                  </div>
                </label>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="card">
            <div class="card-body">
              <div class="d-flex gap-2">
                <button type="button" onclick="goBack()" class="btn btn-outline-secondary flex-fill">
                  <i class="ti ti-x"></i> Cancel
                </button>
                <button type="submit" class="btn btn-action-edit flex-fill">
                  <i class="ti ti-device-floppy"></i> Save Changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Users", "Admin")';
            }
        }
    </script>
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
