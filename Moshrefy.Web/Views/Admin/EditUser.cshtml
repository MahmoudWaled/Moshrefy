@model Moshrefy.Web.Models.User.UpdateUserVM
@{
    ViewData["Title"] = "Edit Team Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-user-edit"></i> Edit Team Member</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Users">My Team</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Update Member Information</h3>
                    </div>
                    <form asp-action="EditUser" asp-route-id="@ViewBag.UserId" method="post">
                        <div class="card-body">
                            <!-- Success/Error Messages -->
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <i class="icon fas fa-check"></i> @TempData["SuccessMessage"]
                                </div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <i class="icon fas fa-ban"></i> @TempData["ErrorMessage"]
                                </div>
                            }

                            <!-- Personal Information -->
                            <div class="form-group">
                                <label asp-for="Name">Full Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserName">Username <span class="text-danger">*</span></label>
                                <input asp-for="UserName" class="form-control" />
                                <small class="form-text text-muted">Used for logging in</small>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <!-- Contact Information -->
                            <hr />
                            <h5><i class="fas fa-address-book"></i> Contact Details</h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email">Email Address</label>
                                        <input asp-for="Email" type="email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Status -->
                            <hr />
                            <div class="form-group">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" asp-for="IsActive" class="custom-control-input" id="isActiveSwitch" />
                                    <label class="custom-control-label" for="isActiveSwitch">
                                        <strong>Access Enabled</strong>
                                        <small class="d-block text-muted">When enabled, this member can log in to the system</small>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-action-edit">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Users" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
