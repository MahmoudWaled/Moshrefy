@model Moshrefy.Web.Models.User.UpdateUserVM
@{
    ViewData["Title"] = "Edit Team Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Admin</div>
        <h2 class="page-title"><i class="ti ti-user-edit"></i> Edit Team Member</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Update Member Information</h3>
          </div>
          <form asp-action="EditUser" asp-route-id="@ViewBag.UserId" method="post">
            <div class="card-body">
              <!-- Personal Information -->
              <div class="mb-3">
                <label class="form-label" asp-for="Name">Full Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="UserName">Username <span class="text-danger">*</span></label>
                <input asp-for="UserName" class="form-control" />
                <small class="form-hint">Used for logging in</small>
                <span asp-validation-for="UserName" class="text-danger"></span>
              </div>

              <!-- Contact Information -->
              <hr />
              <h4 class="mb-3"><i class="ti ti-address-book me-2"></i>Contact Details</h4>

              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label" asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                  </div>
                </div>
              </div>

              <!-- Status -->
              <hr />
              <div class="mb-3">
                <label class="form-check form-switch">
                  <input type="checkbox" asp-for="IsActive" class="form-check-input" />
                  <span class="form-check-label">
                    <strong>Access Enabled</strong>
                    <small class="d-block text-muted">When enabled, this member can log in to the system</small>
                  </span>
                </label>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Users" class="btn btn-outline-secondary me-2">
                <i class="ti ti-x"></i> Cancel
              </a>
              <button type="submit" class="btn btn-action-edit">
                <i class="ti ti-device-floppy"></i> Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
