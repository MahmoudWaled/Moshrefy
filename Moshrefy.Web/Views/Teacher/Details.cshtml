@model Moshrefy.Web.Models.Teacher.TeacherVM
@{
    ViewData["Title"] = "Teacher Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="Teacher" asp-action="Index"><i class="ti ti-user-check"></i> Teachers</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-user-check"></i> @Model.Name</h2>
        </div>
        <div class="col-auto ms-auto">
            <button type="button" onclick="goBack()" class="btn">
                <i class="ti ti-arrow-left"></i> Back
            </button>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <!-- Main Content -->
      <div class="col-lg-8">
        <!-- Status Banner -->
        @{
            var statusClass = Model.IsActive ? "border-success" : "border-secondary";
            var statusIcon = Model.IsActive ? "ti-check" : "ti-x";
            var statusBgClass = Model.IsActive ? "bg-state-active" : "bg-state-inactive";
            var statusTextClass = Model.IsActive ? "text-success" : "text-muted";
        }

        @if (Model.IsDeleted)
        {
            <div class="card mb-3 border-danger">
              <div class="card-body py-3">
                <div class="d-flex align-items-center">
                  <span class="avatar bg-danger text-white me-3">
                    <i class="ti ti-trash"></i>
                  </span>
                  <div>
                    <h3 class="mb-0 text-danger">Deleted Teacher</h3>
                    <small class="text-muted">This teacher has been deleted and can be restored</small>
                  </div>
                </div>
              </div>
            </div>
        }
        else
        {
            <div class="card mb-3 @statusClass">
              <div class="card-body py-3">
                <div class="d-flex align-items-center">
                  <span class="avatar @statusBgClass text-white me-3">
                    <i class="ti @statusIcon"></i>
                  </span>
                  <div>
                    <h3 class="mb-0 @statusTextClass">@(Model.IsActive ? "Active" : "Inactive") Teacher</h3>
                    <small class="text-muted">
                        @(Model.IsActive ? "This teacher is active and can be assigned to courses" : "This teacher is currently inactive")
                    </small>
                  </div>
                </div>
              </div>
            </div>
        }

        <!-- Teacher Information Card -->
        <div class="card mb-3">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <span class="avatar bg-primary text-white me-3">
                <i class="ti ti-user"></i>
              </span>
              <h3 class="card-title mb-0">Teacher Information</h3>
            </div>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label text-muted small mb-1"><i class="ti ti-user me-1"></i> Full Name</label>
                <div class="h5 mb-0">@Model.Name</div>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small mb-1"><i class="ti ti-book me-1"></i> Specialization</label>
                <div class="h5 mb-0"><span class="badge bg-info-lt">@Model.Specialization</span></div>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small mb-1"><i class="ti ti-phone me-1"></i> Phone</label>
                <div class="h5 mb-0"><i class="ti ti-phone text-success me-1"></i>@Model.Phone</div>
              </div>
              @if (!string.IsNullOrEmpty(Model.Email))
              {
                  <div class="col-md-6">
                    <label class="form-label text-muted small mb-1"><i class="ti ti-mail me-1"></i> Email</label>
                    <div class="h5 mb-0">@Model.Email</div>
                  </div>
              }
            </div>
          </div>
        </div>

        <!-- Assigned Courses Card -->
        <div class="card mb-3">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <span class="avatar bg-primary text-white me-3">
                <i class="ti ti-book"></i>
              </span>
              <h3 class="card-title mb-0">Assigned Courses</h3>
            </div>
          </div>
          <div class="card-body">
            <div id="assignedCoursesListDetails">
              <div class="text-center text-muted py-3">
                <span class="spinner-border spinner-border-sm"></span> Loading...
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <!-- Actions Card -->
        <div class="card mb-3">
          <div class="card-header">
            <h3 class="card-title"><i class="ti ti-settings me-2"></i>Actions</h3>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              @if (!Model.IsDeleted)
              {
                  <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action-edit">
                    <i class="ti ti-edit me-2"></i> Edit Teacher
                  </a>

                  <a asp-action="ManageCourses" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="ti ti-book me-2"></i> Manage Courses
                  </a>

                  @if (Model.IsActive)
                  {
                      <button class="btn btn-state-deactive" onclick="deactivateTeacher()">
                        <i class="ti ti-ban me-2"></i> Deactivate
                      </button>
                  }
                  else
                  {
                      <button class="btn btn-state-active" onclick="activateTeacher()">
                        <i class="ti ti-check me-2"></i> Activate
                      </button>
                  }

                  <hr class="my-2">
                  <button class="btn btn-outline-danger" onclick="deleteTeacher()">
                    <i class="ti ti-trash me-2"></i> Delete Teacher
                  </button>
              }
              else
              {
                  <button class="btn btn-success" onclick="restoreTeacher()">
                    <i class="ti ti-refresh me-2"></i> Restore Teacher
                  </button>
                  <button class="btn btn-danger" onclick="permanentDeleteTeacher()">
                    <i class="ti ti-trash-x me-2"></i> Permanently Delete
                  </button>
              }
            </div>
          </div>
        </div>

        <!-- Info Card -->
        <div class="card bg-azure-lt">
          <div class="card-body">
            <div class="d-flex">
              <div>
                <i class="ti ti-info-circle icon text-azure me-2" style="font-size: 1.5rem;"></i>
              </div>
              <div>
                <h4 class="mb-1">About Teachers</h4>
                <p class="text-muted mb-0 small">
                  Teachers can be assigned to courses and manage their sessions, exams, and attendance.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadAssignedCourses();
        });

        function loadAssignedCourses() {
            $.get('@Url.Action("GetAssignedCourses")/@Model.Id', function(courses) {
                var html = '';
                if (courses.length === 0) {
                    html = '<div class="text-center text-muted py-2"><i class="ti ti-book-off me-1"></i> No courses assigned</div>';
                } else {
                    html = '<ul class="list-group list-group-flush">';
                    courses.forEach(function(course) {
                        html += '<li class="list-group-item d-flex align-items-center justify-content-between">';
                        html += '<div>';
                        html += '<i class="ti ti-book text-primary me-2"></i>';
                        html += '<a href="/Course/Details/' + course.courseId + '" class="text-decoration-none fw-bold">' + course.courseName + '</a>';
                        if (course.academicYear) {
                            html += ' <small class="text-muted">(' + course.academicYear + ')</small>';
                        }
                        html += '</div>';
                        if (!course.isActive) {
                            html += '<span class="badge bg-secondary">Inactive</span>';
                        }
                        html += '</li>';
                    });
                    html += '</ul>';
                }
                $('#assignedCoursesListDetails').html(html);
            });
        }

        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Teacher")';
            }
        }

        function activateTeacher() {
            TablerDialog.fire({ title: 'Activate Teacher?', text: 'Mark this teacher as active?', icon: 'question', showCancelButton: true, confirmButtonColor: '#28a745', confirmButtonText: '<i class="ti ti-check"></i> Activate' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Activate")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Activated!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function deactivateTeacher() {
            TablerDialog.fire({ title: 'Deactivate Teacher?', text: 'Mark this teacher as inactive?', icon: 'warning', showCancelButton: true, confirmButtonColor: '#ffc107', confirmButtonText: '<i class="ti ti-ban"></i> Deactivate' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Deactivate")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Deactivated!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function deleteTeacher() {
            TablerDialog.fire({
                title: 'Delete Teacher',
                html: '<div class="alert alert-danger mb-3"><i class="ti ti-alert-triangle me-2"></i>This action will delete <strong>@Model.Name</strong></div>Type <code>Delete</code> to confirm:',
                input: 'text',
                inputPlaceholder: 'Type Delete',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                confirmButtonText: '<i class="ti ti-trash"></i> Delete',
                inputValidator: function(value) {
                    if (value !== 'Delete') {
                        return 'You must type "Delete" to confirm';
                    }
                    return null;
                }
            })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Delete")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Deleted!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => window.location.href = '@Url.Action("Index")'); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function restoreTeacher() {
            TablerDialog.fire({ title: 'Restore Teacher?', text: 'Restore this teacher?', icon: 'question', showCancelButton: true, confirmButtonColor: '#28a745', confirmButtonText: '<i class="ti ti-refresh"></i> Restore' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Restore")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Restored!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function permanentDeleteTeacher() {
            TablerDialog.fire({
                title: 'PERMANENT DELETE',
                html: '<div class="alert alert-danger mb-2"><strong>DANGER!</strong> This cannot be undone!</div>Type <code>Delete</code> to confirm:',
                input: 'text',
                inputPlaceholder: 'Type Delete',
                icon: 'error',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                confirmButtonText: '<i class="ti ti-trash-x"></i> Delete Forever',
                inputValidator: (value) => {
                    if (value !== 'Delete') {
                        return 'Please type "Delete" to confirm';
                    }
                }
            })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("HardDelete")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Deleted!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => window.location.href = '@Url.Action("Index")'); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }
    </script>
}
