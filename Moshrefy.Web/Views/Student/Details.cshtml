@model Moshrefy.Web.Models.Student.StudentVM
@{
    ViewData["Title"] = "Student Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="Student" asp-action="Index"><i class="ti ti-users"></i> Students</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-user"></i> @Model.Name</h2>
        </div>
        <div class="col-auto ms-auto">
            <button type="button" onclick="goBack()" class="btn">
                <i class="ti ti-arrow-left"></i> Back
            </button>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <!-- Main Content -->
      <div class="col-lg-8">
        <!-- Status Banner -->
        @{
            var statusClass = Model.StudentStatus switch {
                Moshrefy.Domain.Enums.StudentStatus.Active => "border-success",
                Moshrefy.Domain.Enums.StudentStatus.Inactive => "border-secondary",
                Moshrefy.Domain.Enums.StudentStatus.Suspended => "border-warning",
                _ => "border-secondary"
            };
            var statusIcon = Model.StudentStatus switch {
                Moshrefy.Domain.Enums.StudentStatus.Active => "ti-check",
                Moshrefy.Domain.Enums.StudentStatus.Inactive => "ti-x",
                Moshrefy.Domain.Enums.StudentStatus.Suspended => "ti-ban",
                _ => "ti-question"
            };
            var statusBgClass = Model.StudentStatus switch {
                Moshrefy.Domain.Enums.StudentStatus.Active => "bg-state-active",
                Moshrefy.Domain.Enums.StudentStatus.Inactive => "bg-state-inactive",
                Moshrefy.Domain.Enums.StudentStatus.Suspended => "bg-warning",
                _ => "bg-secondary"
            };
            var statusTextClass = Model.StudentStatus switch {
                Moshrefy.Domain.Enums.StudentStatus.Active => "text-success",
                Moshrefy.Domain.Enums.StudentStatus.Inactive => "text-muted",
                Moshrefy.Domain.Enums.StudentStatus.Suspended => "text-warning",
                _ => "text-muted"
            };
        }

        @if (Model.IsDeleted)
        {
            <div class="card mb-3 border-danger">
              <div class="card-body py-3">
                <div class="d-flex align-items-center">
                  <span class="avatar bg-danger text-white me-3">
                    <i class="ti ti-trash"></i>
                  </span>
                  <div>
                    <h3 class="mb-0 text-danger">Deleted Student</h3>
                    <small class="text-muted">This student has been deleted and can be restored</small>
                  </div>
                </div>
              </div>
            </div>
        }
        else
        {
            <div class="card mb-3 @statusClass">
              <div class="card-body py-3">
                <div class="d-flex align-items-center">
                  <span class="avatar @statusBgClass text-white me-3">
                    <i class="ti @statusIcon"></i>
                  </span>
                  <div>
                    <h3 class="mb-0 @statusTextClass">@Model.StudentStatus Student</h3>
                    <small class="text-muted">
                        @(Model.StudentStatus switch {
                            Moshrefy.Domain.Enums.StudentStatus.Active => "This student is active and can be enrolled in courses",
                            Moshrefy.Domain.Enums.StudentStatus.Inactive => "This student is currently inactive",
                            Moshrefy.Domain.Enums.StudentStatus.Suspended => "This student has been suspended",
                            _ => "Unknown status"
                        })
                    </small>
                  </div>
                </div>
              </div>
            </div>
        }

        <!-- Personal Information Card -->
        <div class="card mb-3">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <span class="avatar bg-primary text-white me-3">
                <i class="ti ti-user"></i>
              </span>
              <h3 class="card-title mb-0">Personal Information</h3>
            </div>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label text-muted small mb-1"><i class="ti ti-user me-1"></i> Full Name</label>
                <div class="h5 mb-0">@Model.Name</div>
              </div>
              <div class="col-md-3">
                <label class="form-label text-muted small mb-1"><i class="ti ti-calendar me-1"></i> Date of Birth</label>
                <div class="h5 mb-0">@Model.DateOfBirth.ToString("MMM dd, yyyy")</div>
              </div>
              <div class="col-md-3">
                <label class="form-label text-muted small mb-1"><i class="ti ti-cake me-1"></i> Age</label>
                <div class="h5 mb-0"><span>@Model.Age years</span></div>
              </div>
              @if (!string.IsNullOrEmpty(Model.NationalId))
              {
                  <div class="col-md-6">
                    <label class="form-label text-muted small mb-1"><i class="ti ti-id me-1"></i> National ID</label>
                    <div class="h5 mb-0"><code>@Model.NationalId</code></div>
                  </div>
              }
              @if (!string.IsNullOrEmpty(Model.Email))
              {
                  <div class="col-md-6">
                    <label class="form-label text-muted small mb-1"><i class="ti ti-mail me-1"></i> Email</label>
                    <div class="h5 mb-0">@Model.Email</div>
                  </div>
              }
            </div>
          </div>
        </div>

        <!-- Contact Information Card -->
        <div class="card mb-3">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <span class="avatar bg-success text-white me-3">
                <i class="ti ti-phone"></i>
              </span>
              <h3 class="card-title mb-0">Contact Information</h3>
            </div>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label text-muted small mb-1"><i class="ti ti-phone me-1"></i> Primary Phone</label>
                <div class="h5 mb-0"><i class="ti ti-phone text-success me-1"></i>@Model.FirstPhone</div>
              </div>
              @if (!string.IsNullOrEmpty(Model.SecondPhone))
              {
                  <div class="col-md-6">
                    <label class="form-label text-muted small mb-1"><i class="ti ti-phone me-1"></i> Secondary Phone</label>
                    <div class="h5 mb-0"><i class="ti ti-phone text-info me-1"></i>@Model.SecondPhone</div>
                  </div>
              }
              @if (!string.IsNullOrEmpty(Model.FatherPhone))
              {
                  <div class="col-md-6">
                    <label class="form-label text-muted small mb-1"><i class="ti ti-phone me-1"></i> Father's Phone</label>
                    <div class="h5 mb-0"><i class="ti ti-phone text-primary me-1"></i>@Model.FatherPhone</div>
                  </div>
              }
              @if (!string.IsNullOrEmpty(Model.MotherPhone))
              {
                  <div class="col-md-6">
                    <label class="form-label text-muted small mb-1"><i class="ti ti-phone me-1"></i> Mother's Phone</label>
                    <div class="h5 mb-0"><i class="ti ti-phone text-pink me-1"></i>@Model.MotherPhone</div>
                  </div>
              }
            </div>
          </div>
        </div>

        <!-- Notes Card -->
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="card mb-3">
              <div class="card-header">
                <div class="d-flex align-items-center">
                  <span class="avatar bg-info text-white me-3">
                    <i class="ti ti-notes"></i>
                  </span>
                  <h3 class="card-title mb-0">Notes</h3>
                </div>
              </div>
              <div class="card-body">
                <p class="mb-0">@Model.Notes</p>
              </div>
            </div>
        }
      </div>

      <!-- Sidebar -->
      <div class="col-lg-4">
        <!-- Actions Card -->
        <div class="card mb-3">
          <div class="card-header">
            <h3 class="card-title"><i class="ti ti-settings me-2"></i>Actions</h3>
          </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              @if (!Model.IsDeleted)
              {
                  <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action-edit">
                    <i class="ti ti-edit me-2"></i> Edit Student
                  </a>

                  @if (Model.StudentStatus == Moshrefy.Domain.Enums.StudentStatus.Active)
                  {
                      <button class="btn btn-state-deactive" onclick="deactivateStudent()">
                        <i class="ti ti-ban me-2"></i> Deactivate
                      </button>
                      <button class="btn btn-warning" onclick="suspendStudent()">
                        <i class="ti ti-alert-triangle me-2"></i> Suspend
                      </button>
                  }
                  else
                  {
                      <button class="btn btn-state-active" onclick="activateStudent()">
                        <i class="ti ti-check me-2"></i> Activate
                      </button>
                  }

                  <hr class="my-2">
                  <button class="btn btn-outline-danger" onclick="deleteStudent()">
                    <i class="ti ti-trash me-2"></i> Delete Student
                  </button>
              }
              else
              {
                  <button class="btn btn-success" onclick="restoreStudent()">
                    <i class="ti ti-refresh me-2"></i> Restore Student
                  </button>
                  <button class="btn btn-danger" onclick="permanentDeleteStudent()">
                    <i class="ti ti-trash-x me-2"></i> Permanently Delete
                  </button>
              }
            </div>
          </div>
        </div>

        <!-- Stats Card -->
        <div class="card mb-3">
          <div class="card-header">
            <h3 class="card-title"><i class="ti ti-chart-bar me-2"></i>Statistics</h3>
          </div>
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <span class="avatar bg-primary text-white me-3">
                <i class="ti ti-book"></i>
              </span>
              <div>
                <div class="text-muted small">Enrolled Courses</div>
                <div class="h4 mb-0">@Model.EnrolledCoursesCount</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Info Card -->
        <div class="card bg-azure-lt">
          <div class="card-body">
            <div class="d-flex">
              <div>
                <i class="ti ti-info-circle icon text-azure me-2" style="font-size: 1.5rem;"></i>
              </div>
              <div>
                <h4 class="mb-1">About Students</h4>
                <p class="text-muted mb-0 small">
                  Students can be enrolled in courses, and you can track their attendance, exams, and payments.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Student")';
            }
        }

        function activateStudent() {
            TablerDialog.fire({ title: 'Activate Student?', text: 'Mark this student as active?', icon: 'question', showCancelButton: true, confirmButtonColor: '#28a745', confirmButtonText: '<i class="ti ti-check"></i> Activate' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Activate")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Activated!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function deactivateStudent() {
            TablerDialog.fire({ title: 'Deactivate Student?', text: 'Mark this student as inactive?', icon: 'warning', showCancelButton: true, confirmButtonColor: '#ffc107', confirmButtonText: '<i class="ti ti-ban"></i> Deactivate' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Deactivate")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Deactivated!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function suspendStudent() {
            TablerDialog.fire({ title: 'Suspend Student?', text: 'Suspend this student?', icon: 'warning', showCancelButton: true, confirmButtonColor: '#f59f00', confirmButtonText: '<i class="ti ti-alert-triangle"></i> Suspend' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Suspend")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Suspended!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function deleteStudent() {
            TablerDialog.fire({
                title: 'Delete Student',
                html: '<div class="alert alert-danger mb-3"><i class="ti ti-alert-triangle me-2"></i>This action will delete <strong>@Model.Name</strong></div>Type <code>Delete</code> to confirm:',
                input: 'text',
                inputPlaceholder: 'Type Delete',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                confirmButtonText: '<i class="ti ti-trash"></i> Delete',
                inputValidator: function(value) {
                    if (value !== 'Delete') {
                        return 'You must type "Delete" to confirm';
                    }
                    return null;
                }
            })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Delete")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Deleted!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => window.location.href = '@Url.Action("Index")'); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function restoreStudent() {
            TablerDialog.fire({ title: 'Restore Student?', text: 'Restore this student?', icon: 'question', showCancelButton: true, confirmButtonColor: '#28a745', confirmButtonText: '<i class="ti ti-refresh"></i> Restore' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Restore")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Restored!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => location.reload()); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }

        function permanentDeleteStudent() {
            TablerDialog.fire({
                title: 'PERMANENT DELETE',
                html: '<div class="alert alert-danger mb-2"><strong>DANGER!</strong> This cannot be undone!</div>Type <code>Delete</code> to confirm:',
                input: 'text',
                inputPlaceholder: 'Type Delete',
                icon: 'error',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                confirmButtonText: '<i class="ti ti-trash-x"></i> Delete Forever',
                inputValidator: (value) => {
                    if (value !== 'Delete') {
                        return 'Please type "Delete" to confirm';
                    }
                }
            })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("HardDelete")', { id: @Model.Id }).done((res) => { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Deleted!', text: res.message, timer: 2000, showConfirmButton: false }).then(() => window.location.href = '@Url.Action("Index")'); } else { TablerDialog.fire('Error', res.message, 'error'); } }).fail(() => TablerDialog.fire('Error', 'An error occurred', 'error')); } });
        }
    </script>
}
