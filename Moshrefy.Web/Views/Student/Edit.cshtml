@model Moshrefy.Web.Models.Student.UpdateStudentVM
@{
    ViewData["Title"] = "Edit Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var studentId = ViewBag.StudentId;
    var studentName = ViewBag.StudentName;
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="Student" asp-action="Index"><i class="ti ti-users"></i> Students</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Student" asp-action="Details" asp-route-id="@studentId">@studentName</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-edit"></i> Edit Student</h2>
        </div>
        <div class="col-auto ms-auto">
            <button type="button" onclick="goBack()" class="btn">
                <i class="ti ti-arrow-left"></i> Back
            </button>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <form asp-action="Edit" asp-route-id="@studentId" method="post">
      <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
          <!-- Personal Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-primary text-white me-3">
                  <i class="ti ti-user"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Personal Information</h3>
                  <small class="text-muted">Basic student details</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row g-3">
                <div class="col-md-8">
                  <label class="form-label required" asp-for="Name">Student Name</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-user"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                  </div>
                  <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-4">
                  <label class="form-label required" asp-for="DateOfBirth">Date of Birth</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-calendar"></i></span>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                  </div>
                  <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                  <label class="form-label" asp-for="NationalId">National ID</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-id"></i></span>
                    <input asp-for="NationalId" class="form-control" placeholder="Enter national ID (optional)" />
                  </div>
                  <span asp-validation-for="NationalId" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                  <label class="form-label" asp-for="Email">Email Address</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-mail"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email (optional)" />
                  </div>
                  <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-success text-white me-3">
                  <i class="ti ti-phone"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Contact Information</h3>
                  <small class="text-muted">Phone numbers for student and parents</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label required" asp-for="FirstPhone">Primary Phone</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="FirstPhone" class="form-control" placeholder="01xxxxxxxxx" />
                  </div>
                  <span asp-validation-for="FirstPhone" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                  <label class="form-label" asp-for="SecondPhone">Secondary Phone</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="SecondPhone" class="form-control" placeholder="Optional" />
                  </div>
                  <span asp-validation-for="SecondPhone" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                  <label class="form-label" asp-for="FatherPhone">Father's Phone</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="FatherPhone" class="form-control" placeholder="Optional" />
                  </div>
                  <span asp-validation-for="FatherPhone" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                  <label class="form-label" asp-for="MotherPhone">Mother's Phone</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="MotherPhone" class="form-control" placeholder="Optional" />
                  </div>
                  <span asp-validation-for="MotherPhone" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Status & Notes Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-info text-white me-3">
                  <i class="ti ti-notes"></i>
                </span>
                <h3 class="card-title mb-0">Status & Notes</h3>
              </div>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label required" asp-for="StudentStatus">Status</label>
                <select asp-for="StudentStatus" class="form-select" asp-items="Html.GetEnumSelectList<Moshrefy.Domain.Enums.StudentStatus>()"></select>
                <span asp-validation-for="StudentStatus" class="text-danger small"></span>
              </div>
              <div class="mb-0">
                <label class="form-label" asp-for="Notes">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any additional information about the student..."></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
              </div>
            </div>

            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
                  <i class="ti ti-x"></i> Cancel
                </button>
                <button type="submit" class="btn btn-action-edit">
                  <i class="ti ti-check"></i> Save Changes
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
          <!-- Info Card -->
          <div class="card bg-azure-lt">
            <div class="card-body">
              <div class="d-flex">
                <div>
                  <i class="ti ti-info-circle icon text-azure me-2" style="font-size: 1.5rem;"></i>
                </div>
                <div>
                  <h4 class="mb-1">Editing @studentName</h4>
                  <p class="text-muted mb-0 small">
                    Update the student information. All changes will be saved when you click "Save Changes".
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="card mt-3">
            <div class="card-header">
              <h4 class="card-title"><i class="ti ti-bolt me-2"></i>Quick Actions</h4>
            </div>
            <div class="card-body">
              <div class="d-grid gap-2">
                <a asp-action="Details" asp-route-id="@studentId" class="btn btn-outline-primary">
                  <i class="ti ti-eye me-2"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                  <i class="ti ti-list me-2"></i> Back to List
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Details", "Student", new { id = studentId })';
            }
        }
    </script>
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
