<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Moshrefy | @ViewData["Title"] </title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
  <!-- Custom styles -->
  <link rel="stylesheet" href="~/css/site.css">
</head>

<body class="hold-transition sidebar-mini">


<div class="wrapper">

  <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light ">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <!-- Navbar Search -->
      <li class="nav-item">
        <a class="nav-link" data-widget="navbar-search" href="#" role="button">
          <i class="fas fa-search"></i>
        </a>
        <div class="navbar-search-block">
          <form class="form-inline">
            <div class="input-group input-group-sm">
              <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
              <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                  <i class="fas fa-search"></i>
                </button>
                <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </li>

      <!-- User Info -->
      <li class="nav-item">
        <a class="nav-link" href="#">
          <i class="fas fa-user mr-2"></i>
          @{
            var displayRole = "User";
            if (User.IsInRole("SuperAdmin"))
            {
              displayRole = "Super Admin";
            }
            else if (User.IsInRole("Admin"))
            {
              displayRole = "Admin";
            }
            else if (User.IsInRole("Manager"))
            {
              displayRole = "Manager";
            }
            else if (User.IsInRole("Employee"))
            {
              displayRole = "Employee";
            }
          }
          <span>@User.Identity?.Name (@displayRole)</span>
        </a>
      </li>
     
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4 z-3 ">
    <!-- Brand Logo -->
    @if (User.IsInRole("SuperAdmin"))
    {
      <a asp-controller="SuperAdmin" asp-action="Index" class="brand-link">
        <span class="brand-text font-weight-light">Moshrefy</span>
      </a>
    }
    else if (User.IsInRole("Admin"))
    {
      <a asp-controller="Admin" asp-action="Index" class="brand-link">
        <span class="brand-text font-weight-light">Moshrefy</span>
      </a>
    }
    else
    {
      <a href="#" class="brand-link">
        <span class="brand-text font-weight-light">Moshrefy</span>
      </a>
    }

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        
        <!-- Dashboard - All Roles -->
        @if (User.IsInRole("SuperAdmin"))
        {
          <li class="nav-item">
            <a asp-controller="SuperAdmin" asp-action="Index" class="nav-link">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>Dashboard</p>
            </a>
          </li>
        }
        else if (User.IsInRole("Admin"))
        {
          <li class="nav-item">
            <a asp-controller="Admin" asp-action="Index" class="nav-link">
              <i class="nav-icon fas fa-home"></i>
              <p>My Center</p>
            </a>
          </li>
        }

        <!-- SuperAdmin Only -->
        @if (User.IsInRole("SuperAdmin"))
        {
          <li class="nav-header">SYSTEM MANAGEMENT</li>
          
          <li class="nav-item">
            <a asp-controller="SuperAdmin" asp-action="Centers" class="nav-link">
              <i class="nav-icon fas fa-building"></i>
              <p>Centers</p>
            </a>
          </li>
          <li class="nav-item">
            <a asp-controller="SuperAdmin" asp-action="Users" class="nav-link">
              <i class="nav-icon fas fa-users-cog"></i>
              <p>User Management</p>
            </a>
          </li>
          <li class="nav-item">
            <a asp-controller="SuperAdmin" asp-action="DeletedItems" class="nav-link">
              <i class="nav-icon fas fa-trash-restore"></i>
              <p>Deleted Items</p>
            </a>
          </li>
        }

        <!-- Admin Only - Team Management -->
        @if (User.IsInRole("Admin"))
        {
          <li class="nav-header">MY TEAM</li>
          
          <li class="nav-item">
            <a asp-controller="Admin" asp-action="Users" class="nav-link">
              <i class="nav-icon fas fa-users"></i>
              <p>Team Members</p>
            </a>
          </li>
          <li class="nav-item">
            <a asp-controller="Admin" asp-action="CreateUser" class="nav-link">
              <i class="nav-icon fas fa-user-plus"></i>
              <p>Add Team Member</p>
            </a>
          </li>
        }

        <!-- Admin & SuperAdmin -->
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
        {
          <li class="nav-header">ACADEMIC MANAGEMENT</li>
          
          <li class="nav-item">
            <a asp-controller="Course" asp-action="Index" class="nav-link">
              <i class="nav-icon fas fa-book"></i>
              <p>Courses</p>
            </a>
          </li>

          <li class="nav-item">
            <a asp-controller="Student" asp-action="Index" class="nav-link">
              <i class="nav-icon fas fa-user-graduate"></i>
              <p>Students</p>
            </a>
          </li>

          <li class="nav-item">
            <a asp-controller="Teacher" asp-action="Index" class="nav-link">
              <i class="nav-icon fas fa-chalkboard-teacher"></i>
              <p>Teachers</p>
            </a>
          </li>
        }

        <!-- All Roles - Sessions & Attendance -->
        <li class="nav-header">OPERATIONS</li>
        
        <li class="nav-item">
          <a asp-controller="Attendance" asp-action="Index" class="nav-link">
            <i class="nav-icon fas fa-clipboard-check"></i>
            <p>Attendance</p>
          </a>
        </li>

        <!-- Financial - Admin & SuperAdmin -->
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
          <li class="nav-header">FINANCIAL</li>
          
          <li class="nav-item">
            <a asp-controller="Payment" asp-action="Index" class="nav-link">
              <i class="nav-icon fas fa-money-bill-wave"></i>
              <p>Payments</p>
            </a>
          </li>
        }

        <!-- Logout - All Roles -->
        <li class="nav-item">
          <form asp-controller="Auth" asp-action="Logout" method="post">
            <button type="submit" class="nav-link btn btn-link text-left w-100">
              <i class="nav-icon fas fa-sign-out-alt"></i>
              <p>Logout</p>
            </button>
          </form>
        </li>

      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper pt-5">
    <!-- Main content -->
    <div class="content pt-4">
      <div class="container-fluid pt-2 ">
            @RenderBody()
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
      <h5>Title</h5>
      <p>Sidebar content</p>
    </div>
  </aside>
  <!-- /.control-sidebar -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <div class="float-right d-none d-sm-inline">
      Anything you want
    </div>
    <!-- Default to the left -->
    <strong>Copyright &copy; 2024-2025 Moshrefy </strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->

<!-- REQUIRED SCRIPTS -->

<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
<script src="~/js/sidebarToggleHandler.js"></script>
</body>
</html>
