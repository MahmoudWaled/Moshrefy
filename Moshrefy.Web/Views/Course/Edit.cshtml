@model Moshrefy.Web.Models.Course.UpdateCourseVM
@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var courseId = ViewBag.CourseId;
    var courseName = ViewBag.CourseName;
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Courses</div>
        <h2 class="page-title"><i class="ti ti-edit"></i> Edit Course</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Edit: @courseName</h3>
          </div>
          <form asp-action="Edit" asp-route-id="@courseId" method="post">
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label" asp-for="Name">Course Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Mathematics, Physics, etc." />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="AcademicYearId">Academic Year <span class="text-danger">*</span></label>
                <select asp-for="AcademicYearId" asp-items="Model.AcademicYears" class="form-select">
                  <option value="">-- Select Academic Year --</option>
                </select>
                <span asp-validation-for="AcademicYearId" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-check form-switch">
                  <input type="checkbox" asp-for="IsActive" class="form-check-input">
                  <span class="form-check-label">Active</span>
                </label>
                <small class="form-hint">Inactive courses won't be available for new enrollments</small>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Details" asp-route-id="@courseId" class="btn btn-outline-secondary me-2">
                <i class="ti ti-x"></i> Cancel
              </a>
              <button type="submit" class="btn btn-action-edit">
                <i class="ti ti-device-floppy"></i> Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
