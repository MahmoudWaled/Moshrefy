@model Moshrefy.Web.Models.Course.CreateCourseVM
@{
    ViewData["Title"] = "Add Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Courses</div>
        <h2 class="page-title"><i class="ti ti-book-2"></i> Add New Course</h2>
      </div>
      <div class="col-auto ms-auto">
        <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
          <i class="ti ti-arrow-left"></i> Back
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <form asp-action="Create" method="post">
      <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
          <div class="card">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-primary text-white me-3">
                  <i class="ti ti-book"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Course Details</h3>
                  <small class="text-muted">Create a new course</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label required" asp-for="Name">Course Name</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-book"></i></span>
                  <input asp-for="Name" class="form-control" placeholder="e.g., Mathematics, Physics, etc." />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
              </div>

              <div class="mb-3">
                <label class="form-label required" asp-for="AcademicYearId">Academic Year</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-calendar"></i></span>
                  <select asp-for="AcademicYearId" asp-items="Model.AcademicYears" class="form-select">
                    <option value="">-- Select Academic Year --</option>
                  </select>
                </div>
                <span asp-validation-for="AcademicYearId" class="text-danger small"></span>
                <small class="form-hint">Select the academic year this course belongs to</small>
              </div>
            </div>

            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
                  <i class="ti ti-x"></i> Cancel
                </button>
                <button type="submit" class="btn btn-action-create">
                  <i class="ti ti-check"></i> Create Course
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
          <!-- Info Card -->
          <div class="card bg-azure-lt">
            <div class="card-body">
              <div class="d-flex">
                <div>
                  <i class="ti ti-info-circle icon text-azure me-2" style="font-size: 1.5rem;"></i>
                </div>
                <div>
                  <h4 class="mb-1">About Courses</h4>
                  <p class="text-muted mb-0 small">
                    Courses are organized by academic years. Students can enroll in active courses, and you can manage course content.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Tips Card -->
          <div class="card mt-3">
            <div class="card-header">
              <h4 class="card-title"><i class="ti ti-bulb me-2"></i>Tips</h4>
            </div>
            <div class="card-body">
              <ul class="list-unstyled mb-0">
                <li class="mb-2"><i class="ti ti-check text-success me-2"></i>Use clear, descriptive course names</li>
                <li class="mb-2"><i class="ti ti-check text-success me-2"></i>Assign to correct academic year</li>
                <li><i class="ti ti-check text-success me-2"></i>New courses are active by default</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Course")';
            }
        }
    </script>
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
