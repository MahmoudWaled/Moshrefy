@model Moshrefy.Web.Models.Course.CreateCourseVM
@{
    ViewData["Title"] = "Add Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Courses</div>
        <h2 class="page-title"><i class="ti ti-book-2"></i> Add Course</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Course Information</h3>
          </div>
          <form asp-action="Create" method="post">
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label" asp-for="Name">Course Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Mathematics, Physics, etc." />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="AcademicYearId">Academic Year <span class="text-danger">*</span></label>
                <select asp-for="AcademicYearId" asp-items="Model.AcademicYears" class="form-select">
                  <option value="">-- Select Academic Year --</option>
                </select>
                <small class="form-hint">Select the academic year this course belongs to</small>
                <span asp-validation-for="AcademicYearId" class="text-danger"></span>
              </div>

              <!-- Info Box -->
              <div class="alert alert-info">
                <div class="d-flex">
                  <div><i class="ti ti-info-circle icon me-2"></i></div>
                  <div>
                    <strong>Note</strong><br>
                    Courses are organized by academic years. Students can enroll in active courses.
                  </div>
                </div>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="ti ti-x"></i> Cancel
              </a>
              <button type="submit" class="btn btn-action-create">
                <i class="ti ti-check"></i> Create Course
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
