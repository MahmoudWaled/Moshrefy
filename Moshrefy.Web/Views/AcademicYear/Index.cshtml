@using Moshrefy.Application.DTOs.Common
@model PaginatedResult<Moshrefy.Web.Models.AcademicYear.AcademicYearVM>
@{
    ViewData["Title"] = "Academic Years";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var pageSize = Model.PageSize;
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: 'â€º';">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> My Center
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            Academic Years
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-secondary-emphasis mb-0 me-3">
                        <i class="bi bi-calendar3 me-2 fs-5"></i> Academic Years
                    </h2>
                </div>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary btn-sm px-3 shadow-sm">
                        <i class="bi bi-plus-lg me-1"></i> Add Academic Year
                    </a>
                }
            </div>

        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Page body -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                    <h3 class="card-title h5 mb-0 fw-semibold text-secondary-emphasis">
                        Manage Academic Years
                        <span class="badge bg-primary">@Model.TotalCount total</span>
                    </h3>
                    <div class="d-flex gap-3 align-items-center flex-wrap">
                        <!-- Page Size Dropdown -->
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-list-ol me-1"></i> @pageSize per page
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item @(pageSize == 10 ? "active" : "")" asp-action="Index" asp-route-pageSize="10">10 per page</a></li>
                                <li><a class="dropdown-item @(pageSize == 25 ? "active" : "")" asp-action="Index" asp-route-pageSize="25">25 per page</a></li>
                                <li><a class="dropdown-item @(pageSize == 50 ? "active" : "")" asp-action="Index" asp-route-pageSize="50">50 per page</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                @if (Model.Items.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4">#</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Created By</th>
                                    <th>Created At</th>
                                    <th class="text-end px-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int rowNumber = (Model.PageNumber - 1) * Model.PageSize + 1;
                                }
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="px-4 text-muted">@rowNumber</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="d-flex align-items-center justify-content-center bg-primary-subtle text-primary rounded-circle me-2" style="width: 32px; height: 32px;">
                                                    <i class="bi bi-calendar3"></i>
                                                </span>
                                                <span class="text-secondary-emphasis">@item.Name</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-muted">@(item.CreatedByName ?? "N/A")</td>
                                        <td class="text-muted">
                                            <i class="bi bi-clock me-1"></i>@item.CreatedAt.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="text-end px-4">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light" title="View Details">
                                                <i class="bi bi-eye"></i> view
                                            </a>
                                        </td>
                                    </tr>
                                    rowNumber++;
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="card-footer bg-white">
                            <nav>
                                <ul class="pagination pagination-sm justify-content-center mb-0">
                                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@pageSize">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@pageSize">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-calendar-x display-4 text-muted"></i>
                        <h5 class="mt-3 text-muted">No Academic Years Found</h5>
                        <p class="text-muted">There are no academic years matching your filters.</p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i> Add Academic Year
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Modals")
@await Html.PartialAsync("_Toast")

@section Scripts {
    <script>
        const token = $('input[name="__RequestVerificationToken"]').val();

        function deleteAcademicYear(id) {
            setupModal({
                title: 'Delete Academic Year?',
                body: 'This will permanently delete this academic year.<br><br>Type <strong>Delete</strong> to confirm:',
                btnClass: 'btn-danger',
                btnText: 'Delete',
                showInput: true,
                inputPlaceholder: 'Type Delete here',
                onConfirm: (inputVal) => {
                    if (inputVal !== 'Delete') {
                        showAlert('error', 'Please type "Delete" to confirm');
                        return;
                    }
                    $.post('@Url.Action("Delete")', { id: id, __RequestVerificationToken: token })
                        .done(function(response) {
                            if (response.success) {
                                showAlert('success', response.message);
                                setTimeout(() => location.reload(), 1500);
                            } else {
                                showAlert('error', response.message);
                            }
                        })
                        .fail(function() {
                            showAlert('error', 'An error occurred');
                        });
                }
            });
        }
    </script>
}
