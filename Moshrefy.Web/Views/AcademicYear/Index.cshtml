@{
    ViewData["Title"] = "Academic Years";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Management</div>
        <h2 class="page-title"><i class="ti ti-calendar"></i> Academic Years</h2>
      </div>
      <div class="col-auto ms-auto d-print-none">
        @if (User.IsInRole("Admin"))
        {
          <a asp-action="Create" class="btn btn-action-create d-none d-sm-inline-block">
            <i class="ti ti-plus icon"></i> Add Academic Year
          </a>
        }
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row row-deck row-cards">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Manage Academic Years</h3>
            <div class="ms-auto">
              <select id="filterStatus" class="form-select form-select-sm" style="width: auto;">
                <option value="all">All Academic Years</option>
                <option value="active">Active Only</option>
                <option value="inactive">Inactive Only</option>
              </select>
            </div>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table id="academicYearsTable" class="table table-vcenter table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th class="w-1">Actions</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#academicYearsTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetAcademicYearsData")',
                    type: 'POST',
                    data: function (d) { d.filterStatus = $('#filterStatus').val(); },
                    error: function () { Swal.fire({ icon: 'error', title: 'Error Loading Data' }); },
                    dataSrc: function(json) { return json.data; }
                },
                columns: [
                    { data: 'name', name: 'name' },
                    {
                        data: 'isActive', name: 'isActive',
                        render: function (d) {
                            return d ? '<span class="badge bg-state-active"><i class="ti ti-check"></i> Active</span>' : '<span class="badge bg-state-inactive"><i class="ti ti-x"></i> Inactive</span>';
                        }
                    },
                    { data: 'createdByName', name: 'createdByName', defaultContent: 'N/A' },
                    {
                        data: 'createdAt', name: 'createdAt',
                        render: function (d) { return d ? '<small class="text-muted"><i class="ti ti-clock me-1"></i>' + new Date(d).toLocaleDateString() + '</small>' : 'N/A'; }
                    },
                    {
                        data: null, orderable: false,
                        render: function (d, t, row) {
                            var a = '<div class="btn-group btn-group-sm">';
                            a += '<a href="/AcademicYear/Details/' + row.id + '" class="btn btn-action-view" title="View"><i class="ti ti-eye"></i></a>';
                            @if (User.IsInRole("Admin"))
                            {
                                @:a += '<a href="/AcademicYear/Edit/' + row.id + '" class="btn btn-action-edit" title="Edit"><i class="ti ti-edit"></i></a>';
                                @:a += '<button onclick="deleteAcademicYear(' + row.id + ')" class="btn btn-action-delete" title="Delete"><i class="ti ti-trash"></i></button>';
                            }
                            return a + '</div>';
                        }
                    }
                ],
                order: [[0, 'asc']],
                language: { processing: '<i class="ti ti-loader"></i> Loading...', emptyTable: 'No academic years found' }
            });

            $('#filterStatus').change(function () { table.ajax.reload(); });
        });

        function deleteAcademicYear(id) {
            Swal.fire({ title: 'Delete Academic Year?', text: 'This will permanently delete this academic year.', icon: 'warning', showCancelButton: true, confirmButtonColor: '#dc3545', confirmButtonText: '<i class="ti ti-trash"></i> Yes, delete' })
            .then((r) => { if (r.isConfirmed) { $.post('@Url.Action("Delete")', { id: id }).done((res) => { if (res.success) { Swal.fire({ icon: 'success', title: 'Deleted!', timer: 2000, showConfirmButton: false }); $('#academicYearsTable').DataTable().ajax.reload(); } else { Swal.fire('Error', res.message, 'error'); } }); } });
        }
    </script>
}
