@model Moshrefy.Web.Models.AcademicYear.CreateAcademicYearVM
@{
    ViewData["Title"] = "Add Academic Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Academic Years</div>
        <h2 class="page-title"><i class="ti ti-calendar-plus"></i> Add Academic Year</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Academic Year Information</h3>
          </div>
          <form asp-action="Create" method="post">
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label" asp-for="Name">Academic Year Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., 2024-2025" />
                <small class="form-hint">Enter the academic year name (e.g., 2024-2025, Year 1, etc.)</small>
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <!-- Info Box -->
              <div class="alert alert-info">
                <div class="d-flex">
                  <div><i class="ti ti-info-circle icon me-2"></i></div>
                  <div>
                    <strong>Note</strong><br>
                    Academic years are used to organize courses and students. You can create multiple academic years and activate/deactivate them as needed.
                  </div>
                </div>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="ti ti-x"></i> Cancel
              </a>
              <button type="submit" class="btn btn-action-create">
                <i class="ti ti-check"></i> Create Academic Year
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
