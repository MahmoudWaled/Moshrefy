@model Moshrefy.Web.Models.AcademicYear.CreateAcademicYearVM
@{
    ViewData["Title"] = "Add Academic Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: 'â€º';">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> My Center
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="AcademicYear" asp-action="Index" class="text-decoration-none text-muted small">
                                Academic Years
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            Add New
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-dark mb-0 me-3">
                        <i class="bi bi-calendar-plus me-2"></i>Add Academic Year
                    </h2>
                </div>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-flex gap-2 justify-content-md-end">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
                        <i class="bi bi-chevron-left me-1"></i> Back
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Page body -->
<div class="row">
    <div class="col-12">
        <form asp-action="Create" method="post" id="createForm">
            <div class="row">
                <!-- Main Form Column -->
                <div class="col-lg-6">
                    <div class="card mb-3 shadow-sm border-0">
                        <div class="card-header bg-white py-3">
                            <div class="d-flex align-items-center">
                                <span class="d-flex align-items-center justify-content-center bg-primary opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                                    <i class="bi bi-calendar3"></i>
                                </span>
                                <div>
                                    <h3 class="card-title h5 mb-0 fw-semibold">Academic Year Details</h3>
                                    <small class="text-muted">Create a new academic year</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="mb-3">
                                <label class="form-label" asp-for="Name">Academic Year Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., 2024-2025" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                                <small class="form-text text-muted"><i class="bi bi-info-circle me-1"></i>Enter a descriptive name for this academic year</small>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 pt-0">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                    <i class="bi bi-x-lg me-1"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-success px-4">
                                    <i class="bi bi-check-lg me-1"></i> Create
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Column -->
                <div class="col-lg-6">
                    <!-- Info Card -->
                    <div class="card mb-3 shadow-sm border-0 bg-info bg-opacity-10">
                        <div class="card-body">
                            <div class="d-flex">
                                <i class="bi bi-info-circle text-info fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-1">About Academic Years</h6>
                                    <p class="text-muted mb-0 small">
                                        Academic years are used to organize courses and students. You can create multiple academic years and manage them as needed.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tips Card -->
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white">
                            <h6 class="mb-0"><i class="bi bi-lightbulb me-2 text-warning"></i>Tips</h6>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Use a clear naming format (e.g., 2024-2025)</li>
                                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>New years are active by default</li>
                                <li><i class="bi bi-check text-success me-2"></i>You can deactivate years later</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_Modals")
@await Html.PartialAsync("_Toast")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('#createForm').on('submit', function(e) {
            e.preventDefault();
            const form = this;
            
            setupModal({
                title: 'Confirm Creation',
                body: 'Are you sure you want to create this academic year?',
                btnClass: 'btn-success',
                btnText: 'Yes, Create',
                showInput: false,
                onConfirm: () => {
                    form.submit();
                }
            });
        });
    </script>
}
