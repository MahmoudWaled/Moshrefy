@model Moshrefy.Web.Models.AcademicYear.CreateAcademicYearVM
@{
    ViewData["Title"] = "Add Academic Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="AcademicYear" asp-action="Index"><i class="ti ti-calendar"></i> Academic Years</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Add New</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-calendar-plus"></i> Add Academic Year</h2>
        </div>
        <div class="col-auto ms-auto">
            <button type="button" onclick="goBack()" class="btn">
                <i class="ti ti-arrow-left"></i> Back
            </button>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <form asp-action="Create" method="post">
      <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
          <div class="card">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-primary text-white me-3">
                  <i class="ti ti-calendar"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Academic Year Details</h3>
                  <small class="text-muted">Create a new academic year</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label required" asp-for="Name">Academic Year Name</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-calendar"></i></span>
                  <input asp-for="Name" class="form-control" placeholder="e.g., 2024-2025" />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
                <small class="form-hint">Enter a descriptive name for this academic year</small>
              </div>
            </div>

            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
                  <i class="ti ti-x"></i> Cancel
                </button>
                <button type="submit" class="btn btn-action-create">
                  <i class="ti ti-check"></i> Create Academic Year
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
          <!-- Info Card -->
          <div class="card bg-azure-lt">
            <div class="card-body">
              <div class="d-flex">
                <div>
                  <i class="ti ti-info-circle icon text-azure me-2" style="font-size: 1.5rem;"></i>
                </div>
                <div>
                  <h4 class="mb-1">About Academic Years</h4>
                  <p class="text-muted mb-0 small">
                    Academic years are used to organize courses and students. You can create multiple academic years and manage them as needed.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Tips Card -->
          <div class="card mt-3">
            <div class="card-header">
              <h4 class="card-title"><i class="ti ti-bulb me-2"></i>Tips</h4>
            </div>
            <div class="card-body">
              <ul class="list-unstyled mb-0">
                <li class="mb-2"><i class="ti ti-check text-success me-2"></i>Use a clear naming format (e.g., 2024-2025)</li>
                <li class="mb-2"><i class="ti ti-check text-success me-2"></i>New years are active by default</li>
                <li><i class="ti ti-check text-success me-2"></i>You can deactivate years later</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "AcademicYear")';
            }
        }
    </script>
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
