@model Moshrefy.Web.Models.AcademicYear.CreateAcademicYearVM
@{
    ViewData["Title"] = "Add Academic Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-calendar-plus"></i> Add Academic Year</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Academic Years</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Academic Year Information</h3>
                    </div>
                    <form asp-action="Create" method="post">
                        <div class="card-body">
                            <!-- Success/Error Messages -->
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <i class="icon fas fa-check"></i> @TempData["SuccessMessage"]
                                </div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <i class="icon fas fa-ban"></i> @TempData["ErrorMessage"]
                                </div>
                            }

                            <div class="form-group">
                                <label asp-for="Name">Academic Year Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., 2024-2025" />
                                <small class="form-text text-muted">Enter the academic year name (e.g., 2024-2025, Year 1, etc.)</small>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Info Box -->
                            <div class="callout callout-info">
                                <h5><i class="fas fa-info-circle"></i> Note</h5>
                                <p>Academic years are used to organize courses and students. You can create multiple academic years and activate/deactivate them as needed.</p>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-action-create">
                                <i class="fas fa-check"></i> Create Academic Year
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
