@model Moshrefy.Web.Models.AcademicYear.UpdateAcademicYearVM
@{
    ViewData["Title"] = "Edit Academic Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var academicYearId = ViewBag.AcademicYearId;
    var academicYearName = ViewBag.AcademicYearName;
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Academic Years</div>
        <h2 class="page-title"><i class="ti ti-edit"></i> Edit Academic Year</h2>
      </div>
      <div class="col-auto ms-auto">
        <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
          <i class="ti ti-arrow-left"></i> Back
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <!-- Main Form Column -->
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <span class="avatar bg-primary text-white me-3">
                <i class="ti ti-calendar"></i>
              </span>
              <div>
                <h3 class="card-title mb-0">Academic Year Details</h3>
                <small class="text-muted">Editing: @academicYearName</small>
              </div>
            </div>
          </div>
          <form asp-action="Edit" asp-route-id="@academicYearId" method="post">
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label required" asp-for="Name">Academic Year Name</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-calendar"></i></span>
                  <input asp-for="Name" class="form-control" placeholder="e.g., 2024-2025" />
                </div>
                <span asp-validation-for="Name" class="text-danger small"></span>
                <small class="form-hint">Enter a descriptive name for this academic year</small>
              </div>
            </div>

            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
                  <i class="ti ti-x"></i> Cancel
                </button>
                <button type="submit" class="btn btn-action-edit">
                  <i class="ti ti-device-floppy"></i> Save Changes
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Sidebar Column -->
      <div class="col-lg-4">
        <!-- Status Card -->
        <div class="card mb-3">
          <div class="card-header">
            <div class="d-flex align-items-center">
              <span class="avatar bg-success text-white me-3">
                <i class="ti ti-toggle-right"></i>
              </span>
              <h3 class="card-title mb-0">Status</h3>
            </div>
          </div>
          <div class="card-body">
            <label class="form-selectgroup-item flex-fill d-block">
              <div class="form-check form-switch">
                <input type="checkbox" asp-for="IsActive" class="form-check-input">
                <span class="form-check-label">
                  <strong>Active Status</strong>
                  <div class="text-muted small">When active, this year is available for enrollments</div>
                </span>
              </div>
            </label>
          </div>
        </div>

        <!-- Info Card -->
        <div class="card bg-azure-lt">
          <div class="card-body">
            <div class="d-flex">
              <div>
                <i class="ti ti-info-circle icon text-azure me-2" style="font-size: 1.5rem;"></i>
              </div>
              <div>
                <h4 class="mb-1">About Academic Years</h4>
                <p class="text-muted mb-0 small">
                  Academic years help organize courses, students, and enrollments. Deactivating an academic year will prevent new enrollments.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Index", "AcademicYear")';
            }
        }
    </script>
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
