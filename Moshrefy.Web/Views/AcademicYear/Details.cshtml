@model Moshrefy.Web.Models.AcademicYear.AcademicYearVM
@{
    ViewData["Title"] = "Academic Year Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: 'â€º';">
                        <li class="breadcrumb-item">
                            <a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> My Center
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="AcademicYear" asp-action="Index" class="text-decoration-none text-muted small">
                                Academic Years
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            @Model.Name
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-dark mb-0 me-3">
                        <i class="bi bi-calendar3 me-2"></i>@Model.Name
                    </h2>
                </div>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-flex gap-2 justify-content-md-end">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
                        <i class="bi bi-chevron-left me-1"></i> Back
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Page body -->
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Status Banner -->
        <div class="card mb-3 shadow-sm border-0 @(Model.IsActive ? "border-start border-success border-4" : "border-start border-secondary border-4")">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    @if (Model.IsActive)
                    {
                        <div class="d-flex align-items-center justify-content-center bg-success text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-check-lg fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 text-success">Active Academic Year</h5>
                            <small class="text-muted">This academic year is currently in use</small>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-secondary text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-x-lg fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 text-muted">Inactive Academic Year</h5>
                            <small class="text-muted">This academic year is not in use</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Details Card -->
        <div class="card mb-3 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-primary opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-info-circle"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Academic Year Information</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-calendar3 me-1"></i> Year Name
                            </label>
                            <div class="h4 mb-0">@Model.Name</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-toggle-on me-1"></i> Status
                            </label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success py-2 px-3">
                                        <i class="bi bi-check me-1"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary py-2 px-3">
                                        <i class="bi bi-x me-1"></i> Inactive
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Audit Trail Card -->
        <div class="card mb-3 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-secondary opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-clock-history"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Audit Trail</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="d-flex align-items-center justify-content-center bg-success bg-opacity-10 text-success rounded me-3" style="width: 40px; height: 40px;">
                                <i class="bi bi-plus"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Created By</div>
                                <div class="fw-medium">@(Model.CreatedByName ?? "N/A")</div>
                                <div class="text-muted small">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                            </div>
                        </div>
                    </div>
                    @if (Model.ModifiedAt.HasValue)
                    {
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="d-flex align-items-center justify-content-center bg-warning bg-opacity-10 text-warning rounded me-3" style="width: 40px; height: 40px;">
                                    <i class="bi bi-pencil"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Last Modified By</div>
                                    <div class="fw-medium">@(Model.ModifiedByName ?? "N/A")</div>
                                    <div class="text-muted small">@Model.ModifiedAt.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Related Courses Card -->
        <div class="card mb-3 shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-info opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-book"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Related Courses</h3>
                </div>
            </div>
            <div class="card-body">
                <div id="relatedCoursesList">
                    <div class="text-center text-muted py-3">
                        <span class="spinner-border spinner-border-sm"></span> Loading...
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        @if (User.IsInRole("Admin"))
        {
            <!-- Actions Card -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h3 class="card-title h5 mb-0 fw-semibold"><i class="bi bi-gear me-2 text-primary"></i>Actions</h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i> Edit Academic Year
                        </a>
                        <hr class="my-2">
                        <button onclick="deleteAcademicYear(@Model.Id)" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i> Delete Academic Year
                        </button>
                    </div>
                </div>
            </div>

            <!-- Warning Card -->
            <div class="card shadow-sm border-0 bg-danger bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex">
                        <i class="bi bi-exclamation-triangle text-danger fs-4 me-3"></i>
                        <div>
                            <h6 class="text-danger mb-1">Delete Warning</h6>
                            <p class="text-muted mb-0 small">
                                Deleting this academic year will remove all associated data. This action requires confirmation.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@await Html.PartialAsync("_Modals")
@await Html.PartialAsync("_Toast")

@section Scripts {
    <script>
        const token = $('input[name="__RequestVerificationToken"]').val();

        $(document).ready(function() {
            loadRelatedCourses();
        });

        function loadRelatedCourses() {
            $.get('@Url.Action("GetCourses")/@Model.Id', function(courses) {
                var html = '';
                if (courses.length === 0) {
                    html = '<div class="text-center text-muted py-2"><i class="bi bi-book me-1"></i> No courses in this academic year</div>';
                } else {
                    html = '<ul class="list-group list-group-flush">';
                    courses.forEach(function(course) {
                        html += '<li class="list-group-item d-flex align-items-center justify-content-between">';
                        html += '<div>';
                        html += '<i class="bi bi-book text-info me-2"></i>';
                        html += '<a href="/Course/Details/' + course.id + '" class="text-decoration-none">' + course.name + '</a>';
                        html += '</div>';
                        if (!course.isActive) {
                            html += '<span class="badge bg-secondary">Inactive</span>';
                        }
                        html += '</li>';
                    });
                    html += '</ul>';
                }
                $('#relatedCoursesList').html(html);
            });
        }

        function deleteAcademicYear(id) {
            setupModal({
                title: 'Delete Academic Year?',
                body: 'This will permanently delete this academic year.<br><br>Type <strong>Delete</strong> to confirm:',
                btnClass: 'btn-danger',
                btnText: 'Delete',
                showInput: true,
                inputPlaceholder: 'Type Delete here',
                onConfirm: (inputVal) => {
                    if (inputVal !== 'Delete') {
                        showAlert('error', 'Please type "Delete" to confirm');
                        return;
                    }
                    $.post('@Url.Action("Delete")', { id: id, __RequestVerificationToken: token })
                        .done(function(response) {
                            if (response.success) {
                                showAlert('success', response.message);
                                setTimeout(() => window.location.href = '@Url.Action("Index")', 1500);
                            } else {
                                showAlert('error', response.message);
                            }
                        })
                        .fail(function() {
                            showAlert('error', 'An error occurred');
                        });
                }
            });
        }
    </script>
}
