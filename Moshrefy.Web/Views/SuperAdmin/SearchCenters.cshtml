@{
    ViewData["Title"] = "Center Search";
}

<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2 small" style="--bs-breadcrumb-divider: 'â€º';">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="SuperAdmin" class="text-decoration-none text-muted">Dashboard</a></li>
                        <li class="breadcrumb-item active text-primary fw-medium" aria-current="page text-uppercase"> Search</li>
                    </ol>
                </nav>
                <h2 class="h4 fw-bold text-dark mb-0"><i class="bi bi-search me-2"></i>Center Search</h2>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Centers" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-xl">
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <form id="searchByNameForm" class="row g-3">
                        <div class="col-12">
                            <label class="form-label small fw-bold">Search By Name</label>
                            <div class="input-group border rounded shadow-sm">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-building text-primary"></i></span>
                                <input type="text" id="nameQuery" class="form-control border-0" placeholder="Enter center name...">
                                <button type="submit" class="btn btn-primary px-4 fw-bold">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <form id="searchByEmailForm" class="row g-3">
                        <div class="col-12">
                            <label class="form-label small fw-bold">Search By Email</label>
                            <div class="input-group border rounded shadow-sm">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-envelope text-info"></i></span>
                                <input type="email" id="emailQuery" class="form-control border-0" placeholder="Enter email address...">
                                <button type="submit" class="btn btn-info text-white px-4 fw-bold">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="resultsTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Center Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="resultsBody">
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-info-circle me-1"></i> Use one of the search boxes above to see results.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    @await Html.PartialAsync("_Modals")
    @await Html.PartialAsync("_Toast")

@section Scripts {
    <script>
        $(document).ready(function () {

            function performSearch(query, type) {
                const $body = $('#resultsBody');

                if (!query) {
                    showAlert(`Please enter a ${type} to search.`, false);
                    return;
                }

                $body.html(`
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="spinner-border spinner-border-sm text-primary"></div>
                            Searching for ${query}...
                        </td>
                    </tr>
                `);

                let targetUrl = (type === 'name')
                    ? `@Url.Action("GetCenterByName")?name=${encodeURIComponent(query)}`
                    : `@Url.Action("GetCenterByEmail")?email=${encodeURIComponent(query)}`;

                $.get(targetUrl, function (response) {
                    $body.empty();

                    if (response && response.success) {

                        let rawData = response.center || response.centers;

                        if (!rawData) {
                            $body.append('<tr><td colspan="5" class="text-center py-5 text-muted">No data found.</td></tr>');
                            return;
                        }

                        let data = Array.isArray(rawData) ? rawData : [rawData];

                        data.forEach(item => {
                            if (!item || !item.id) return;

                            const statusBadge = item.isActive
                                ? '<span class="badge bg-success-subtle text-success border border-success px-2">Active</span>'
                                : '<span class="badge bg-light text-muted border px-2">Inactive</span>';

                            $body.append(`
                                <tr>
                                    <td class="ps-4 fw-bold text-dark text-uppercase small">${item.name}</td>
                                    <td><small class="text-muted">${item.email || 'N/A'}</small></td>
                                    <td><i class="bi bi-telephone me-1 small text-primary"></i>${item.phone || 'N/A'}</td>
                                    <td>${statusBadge}</td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm border rounded bg-white">
                                            <a href="/SuperAdmin/CenterDetails?centerId=${item.id}" class="btn btn-sm btn-white border-0" title="View"><i class="bi bi-eye text-primary"></i></a>
                                            <a href="/SuperAdmin/EditCenter?id=${item.id}" class="btn btn-sm btn-white border-0" title="Edit"><i class="bi bi-pencil text-warning"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            `);
                        });
                    }
                    else {
                        const errorMsg = response.message || "No center found matching your criteria.";
                        $body.append(`<tr><td colspan="5" class="text-center py-5 text-danger fw-bold">${errorMsg}</td></tr>`);
                    }

                }).fail(function() {
                    showAlert("Search failed. Ensure the server is responding.", false);
                    $body.html('<tr><td colspan="5" class="text-center py-5 text-muted">Error occurred. Please try again.</td></tr>');
                });
            }

            $('#searchByNameForm').on('submit', function (e) {
                e.preventDefault();
                performSearch($('#nameQuery').val().trim(), 'name');
            });

            $('#searchByEmailForm').on('submit', function (e) {
                e.preventDefault();
                performSearch($('#emailQuery').val().trim(), 'email');
            });
        });
    </script>
}
