@model Moshrefy.Web.Models.User.UserVM
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: 'â€º';">
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Users" class="text-decoration-none text-muted small">
                                Users
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            @Model.Name
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-dark mb-0 me-3">
                        @Model.Name
                    </h2>
                </div>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-flex gap-2 justify-content-md-end">
                    <a asp-action="Users" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
                        <i class="bi bi-chevron-left me-1"></i> Back to users
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Page body -->
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Status Banner -->
        <div class="card mb-3 shadow-sm px-1 @(Model.IsActive ? "border-success-subtle" : "border-secondary")">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    @if (Model.IsDeleted)
                    {
                        <span class="d-flex align-items-center justify-content-center bg-danger-subtle text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-trash fs-4 text-danger "></i>
                        </span>
                        <div>
                            <h3 class="mb-0 text-danger">Deleted User</h3>
                            <small class="text-muted">This user has been deleted</small>
                        </div>
                    }
                    else if (Model.IsActive)
                    {
                        <span class="d-flex align-items-center justify-content-center bg-success-subtle text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-check-lg fs-4 text-success "></i>
                        </span>
                        <div>
                            <h3 class="mb-0 text-success">Active User</h3>
                            <small class="text-muted">This user can log in</small>
                        </div>
                    }
                    else
                    {
                        <span class="d-flex align-items-center justify-content-center bg-secondary-subtle text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-x-lg fs-4 text-secondary"></i>
                        </span>
                        <div>
                            <h3 class="mb-0 text-secondary">Inactive User</h3>
                            <small class="text-muted">This user cannot log in</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- User Information Card -->
        <div class="card mb-3 shadow-sm border-0 p-3">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-primary opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-person"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold text-secondary-emphasis">User Information</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3 ">
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-person me-1"></i> Full Name
                            </label>
                            <div class="h5 mb-0 text-muted">@Model.Name</div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-at me-1"></i> Username
                            </label>
                            <div class="h5 mb-0"><code>@Model.UserName</code></div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-envelope me-1"></i> Email
                            </label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email" class="fw-bold text-decoration-none text-muted">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-telephone me-1"></i> Phone
                            </label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber" class="fw-bold text-decoration-none text-muted">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-building me-1"></i> Center
                            </label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.CenterName) && Model.CenterId.HasValue)
                                {
                                    <a asp-action="CenterDetails" asp-route-centerId="@Model.CenterId" class="fw-bold text-decoration-none text-primary">
                                        @Model.CenterName
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No center assigned</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-shield me-1"></i> Role
                            </label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.RoleName))
                                {
                                    <span>@Model.RoleName</span>
                                }
                                else
                                {
                                    <span class="text-muted">No role assigned</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Audit Trail Card -->
        <div class="card shadow-sm border-0 p-3">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-secondary text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-clock-history"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Audit Trail</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="d-flex align-items-center justify-content-center bg-success bg-opacity-10 text-success rounded me-3" style="width: 36px; height: 36px;">
                                <i class="bi bi-plus-lg"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Created By</div>
                                <div class="fw-medium">@(Model.CreatedByName ?? "N/A")</div>
                                <div class="text-muted small">@Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-header bg-transparent py-3 border-bottom-0">
                <h3 class="card-title h6 mb-0 fw-bold">
                    <i class="bi bi-gear-wide-connected me-2 text-primary"></i>Actions
                </h3>
            </div>
            <div class="card-body d-grid gap-2 pt-0">

                <a asp-action="EditUser" asp-route-id="@Model.Id"
                   class="btn btn-light border-0 py-2 shadow-sm text-dark fw-medium">
                    <i class="bi bi-pencil-square me-2 text-primary"></i> Edit User
                </a>

                <a asp-action="UpdateUserRole" asp-route-id="@Model.Id"
                   class="btn btn-light border-0 py-2 shadow-sm text-dark fw-medium">
                    <i class="bi bi-shield-check me-2 text-primary"></i> Update Role
                </a>

                <hr class="my-1 opacity-25">

                @if (Model.IsActive)
                {
                    <button onclick="deactivateUser()" class="btn btn-light text-decoration-none text-dark py-2 fw-medium">
                        <i class="bi bi-pause-circle me-2"></i> Deactivate User
                    </button>
                }
                else
                {
                    <button onclick="activateUser()" class="btn btn-light text-decoration-none text-success py-2 fw-medium">
                        <i class="bi bi-check-circle me-2"></i> Activate User
                    </button>
                }

                <hr class="my-1 opacity-25">

                @if (Model.IsDeleted)
                {
                    <button onclick="restoreUser()" class="btn btn-light text-decoration-none text-success-emphasis py-2 fw-medium">
                        <i class="bi bi-recycle"></i> Restore from Trash
                    </button>
                }
                else
                {
                    <button onclick="softDeleteUser()" class="btn btn-light text-decoration-none text-warning-emphasis py-2 fw-medium">
                        <i class="bi bi-trash3 me-2"></i> Move to Trash
                    </button>
                }

                <button onclick="hardDeleteUser()" class="btn btn-light text-decoration-none text-danger py-2 fw-medium">
                    <i class="bi bi-exclamation-octagon me-2"></i> Permanent Delete
                </button>

            </div>
        </div>

        <div class="alert alert-light border-0 border-start border-danger border-4 shadow-sm mb-0">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle text-danger me-2 fs-5"></i>
                <p class="mb-0 small text-muted">
                    Deleting a user is irreversible and removes all associated data.
                </p>
            </div>
        </div>
    </div>
</div>


<!-- Modals -->
@await Html.PartialAsync("_Modals")

<!-- Toasts -->
@await Html.PartialAsync("_Toast")


@section Scripts {
    <script>
        // Get Anti-Forgery Token
        const token = $('input[name="__RequestVerificationToken"]').val();

        // Unified Action Handler for AJAX Requests
        function handleUserAction(title, actionUrl, isDelete = false) {
            setupModal({
                title: title,
                body: `Are you sure you want to proceed with this action on <strong>@Model.Name</strong>?`,
                btnClass: isDelete ? 'btn-danger' : 'btn-primary',
                btnText: isDelete ? 'Confirm Delete' : 'Confirm Action',
                showInput: isDelete,
                onConfirm: function () {
                    const confirmBtn = $(this);
                    confirmBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Processing...');

                    $.post(actionUrl, { id: '@Model.Id', __RequestVerificationToken: token }, (res) => {
                        if (res.success) {
                            showAlert(res.message || "Operation completed successfully.");

                            setTimeout(() => {
                                window.location.href = (actionUrl.toLowerCase().includes('delete')
                                    ? '@Url.Action("Users", "SuperAdmin")'
                                    : window.location.href);
                            }, 1000);
                        } else {
                            showAlert(res.message || "An error occurred.", false);
                            confirmBtn.prop('disabled', false).text('Confirm Action');
                        }
                    }).fail(() => {
                        showAlert("Server connection error.", false);
                        confirmBtn.prop('disabled', false).text('Confirm Action');
                    });
                }
            });
        }

        // Specific Button Callbacks
        function activateUser()   { handleUserAction('Activate User', '@Url.Action("ActivateUser")'); }
        function deactivateUser() { handleUserAction('Deactivate User', '@Url.Action("DeactivateUser")'); }
        function restoreUser()    { handleUserAction('Restore User', '@Url.Action("RestoreUser")'); }
        function softDeleteUser() { handleUserAction('Move to Trash', '@Url.Action("SoftDeleteUser")', true); }
        function hardDeleteUser() { handleUserAction('Permanent Delete', '@Url.Action("HardDeleteUser")', true); }

        // Monitor Delete Input
        $(document).on('input', '#mInput', function () {
            $('#mBtn').prop('disabled', $(this).val().toLowerCase() !== 'delete');
        });

        // Back Navigation
        function goBack() {
            window.history.length > 1 ? window.history.back() : window.location.href = '@Url.Action("Users", "SuperAdmin")';
        }

        $(document).ready(function () {
            const msg = '@TempData["SuccessMessage"]';
            if (msg) {
                showAlert(msg, true);
            }
        });
    </script>
}
