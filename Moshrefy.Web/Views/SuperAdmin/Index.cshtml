@model Moshrefy.Web.Models.Statistics.SystemStatisticsVM

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">
          Dashboard
        </h2>
        <div class="text-muted mt-1">System Overview & Statistics</div>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    
    <!-- Statistics Cards Row 1 -->
    <div class="row row-deck row-cards mb-3">
      <!-- Total Users -->
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Total Users</div>
            </div>
            <div class="h1 mb-3">@Model.TotalUsers</div>
            <div class="d-flex mb-2">
              <div>Active Users</div>
              <div class="ms-auto">
                <span class="text-green d-inline-flex align-items-center lh-1">
                  @Model.ActiveUsers
                </span>
              </div>
            </div>
            <div class="progress progress-sm">
              <div class="progress-bar bg-primary" style="width: @(Model.TotalUsers > 0 ? (Model.ActiveUsers * 100.0 / Model.TotalUsers).ToString("F1") : "0")%" role="progressbar" aria-valuenow="@Model.ActiveUsers" aria-valuemin="0" aria-valuemax="@Model.TotalUsers">
                <span class="visually-hidden">@(Model.TotalUsers > 0 ? (Model.ActiveUsers * 100.0 / Model.TotalUsers).ToString("F1") : "0")% Active</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Centers -->
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Total Centers</div>
            </div>
            <div class="h1 mb-3">@Model.TotalCenters</div>
            <div class="d-flex mb-2">
              <div>Active Centers</div>
              <div class="ms-auto">
                <span class="text-green d-inline-flex align-items-center lh-1">
                  @Model.ActiveCenters
                </span>
              </div>
            </div>
            <div class="progress progress-sm">
              <div class="progress-bar bg-success" style="width: @(Model.TotalCenters > 0 ? (Model.ActiveCenters * 100.0 / Model.TotalCenters).ToString("F1") : "0")%" role="progressbar">
                <span class="visually-hidden">@(Model.TotalCenters > 0 ? (Model.ActiveCenters * 100.0 / Model.TotalCenters).ToString("F1") : "0")% Active</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistics Cards Row 2 -->
    <div class="row row-deck row-cards mb-3">
      <!-- Teachers -->
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Teachers</div>
              <div class="ms-auto">
                <span class="badge bg-role-teacher">Teacher</span>
              </div>
            </div>
            <div class="h1 mb-0">@Model.TotalTeachers</div>
          </div>
        </div>
      </div>

      <!-- Students -->
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Students</div>
              <div class="ms-auto">
                <span class="badge bg-role-student">Student</span>
              </div>
            </div>
            <div class="h1 mb-0">@Model.TotalStudents</div>
          </div>
        </div>
      </div>

      <!-- Courses -->
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Courses</div>
              <div class="ms-auto">
                <i class="ti ti-book icon text-primary"></i>
              </div>
            </div>
            <div class="h1 mb-0">@Model.TotalCourses</div>
          </div>
        </div>
      </div>

      <!-- Classrooms -->
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Classrooms</div>
              <div class="ms-auto">
                <i class="ti ti-door icon text-info"></i>
              </div>
            </div>
            <div class="h1 mb-0">@Model.TotalClassrooms</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="row row-deck row-cards">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Quick Actions</h3>
          </div>
          <div class="card-body">
            <div class="divide-y">
              <div class="row py-2">
                <div class="col-auto">
                  <span class="avatar bg-role-superadmin text-white">
                    <i class="ti ti-users"></i>
                  </span>
                </div>
                <div class="col">
                  <div class="text-truncate">
                    <strong>Manage Users</strong>
                  </div>
                  <div class="text-muted">View and manage all system users</div>
                </div>
                <div class="col-auto align-self-center">
                  <a href="@Url.Action("Index", "SuperAdmin", new { area = "SuperAdmin" })" class="btn btn-sm btn-action-view">
                    <i class="ti ti-eye icon"></i>
                    View
                  </a>
                </div>
              </div>

              <div class="row py-2">
                <div class="col-auto">
                  <span class="avatar bg-primary text-white">
                    <i class="ti ti-building"></i>
                  </span>
                </div>
                <div class="col">
                  <div class="text-truncate">
                    <strong>Manage Centers</strong>
                  </div>
                  <div class="text-muted">View and manage all centers</div>
                </div>
                <div class="col-auto align-self-center">
                  <a href="@Url.Action("Index", "Center", new { area = "SuperAdmin" })" class="btn btn-sm btn-action-view">
                    <i class="ti ti-eye icon"></i>
                    View
                  </a>
                </div>
              </div>

              <div class="row py-2">
                <div class="col-auto">
                  <span class="avatar bg-danger text-white">
                    <i class="ti ti-trash"></i>
                  </span>
                </div>
                <div class="col">
                  <div class="text-truncate">
                    <strong>Deleted Items</strong>
                  </div>
                  <div class="text-muted">Review and restore deleted items</div>
                </div>
                <div class="col-auto align-self-center">
                  <a href="@Url.Action("DeletedItems", "SuperAdmin", new { area = "SuperAdmin" })" class="btn btn-sm btn-action-view">
                    <i class="ti ti-eye icon"></i>
                    View
                  </a>
                </div>
              </div>

              <div class="row py-2">
                <div class="col-auto">
                  <span class="avatar bg-info text-white">
                    <i class="ti ti-package"></i>
                  </span>
                </div>
                <div class="col">
                  <div class="text-truncate">
                    <strong>Manage Items</strong>
                  </div>
                  <div class="text-muted">View and manage inventory items</div>
                </div>
                <div class="col-auto align-self-center">
                  <a href="@Url.Action("Index", "Item", new { area = "SuperAdmin" })" class="btn btn-sm btn-action-view">
                    <i class="ti ti-eye icon"></i>
                    View
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
