@model Moshrefy.Web.Models.Statistics.SystemStatisticsVM

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->

<div class="bg-white p-4 mb-4 shadow-sm border-bottom">

    <div class="container-fluid row align-items-center justify-content-between">




            <div class="col-md-8">

                <nav aria-label="breadcrumb">

                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: '›';">

                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">

                            <i class="bi bi-house-door me-1"></i> Dashboard

                        </li>

                    </ol>

                </nav>

                <div class="d-flex align-items-center">

                    <h2 class="h4 fw-bold text-secondary-emphasis mb-0 me-3">

                        System Dashboard

                    </h2>

                </div>

            </div>



        <div class="col-md-4 text-end">
            <span class="badge bg-light text-dark border fw-medium px-3 py-2">
                <i class="bi bi-calendar3 me-2"></i> @DateTime.Now.ToString("MMM dd, yyyy")
            </span>
        </div>
    </div>

</div>



<!-- body -->
<div class="container-xl">

    <div class="row g-3 mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar bg-primary-subtle text-primary rounded-3 p-2 me-3">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                        <div class="small fw-bold text-uppercase text-muted">Total Users</div>
                    </div>
                    <div class="d-flex align-items-baseline">
                        <h3 class="fw-bold mb-0 me-2">@Model.TotalUsers</h3>
                        <span class="text-success small fw-medium">
                            <i class="bi bi-dot"></i>@Model.ActiveUsers Active
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar bg-success-subtle text-success rounded-3 p-2 me-3">
                            <i class="bi bi-buildings fs-4"></i>
                        </div>
                        <div class="small fw-bold text-uppercase text-muted">Total Centers</div>
                    </div>
                    <div class="d-flex align-items-baseline">
                        <h3 class="fw-bold mb-0 me-2">@Model.TotalCenters</h3>
                        <span class="text-success small">
                            <i class="bi bi-dot"></i>@Model.ActiveCenters Active
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar bg-info-subtle text-info rounded-3 p-2 me-3">
                            <i class="bi bi-person-badge fs-4"></i>
                        </div>
                        <div class="small fw-bold text-uppercase text-muted">Teachers</div>
                    </div>
                    <h3 class="fw-bold mb-0">@Model.TotalTeachers</h3>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar bg-warning-subtle text-warning rounded-3 p-2 me-3">
                            <i class="bi bi-mortarboard fs-4"></i>
                        </div>
                        <div class="small fw-bold text-uppercase text-muted">Students</div>
                    </div>
                    <h3 class="fw-bold mb-0">@Model.TotalStudents</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h6 class="fw-bold text-uppercase text-muted mb-0">Academic Assets</h6>
                </div>
                <div class="card-body px-4 pb-4">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-0 border-0 d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-book me-3 text-primary"></i>
                                <span>Total Courses</span>
                            </div>
                            <span class="fw-bold">@Model.TotalCourses</span>
                        </div>
                        <div class="list-group-item px-0 border-0 d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-door-closed me-3 text-danger"></i>
                                <span>Classrooms</span>
                            </div>
                            <span class="fw-bold">@Model.TotalClassrooms</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <h6 class="fw-bold text-uppercase text-muted mb-0">Quick Management</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <a asp-action="Users" asp-controller="SuperAdmin" class="text-decoration-none p-3 border rounded d-flex align-items-center bg-light-hover transition">
                                <i class="bi bi-people-fill text-primary me-3"></i>
                                <span class="text-dark fw-medium">Users Management</span>
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Centers" asp-controller="SuperAdmin" class="text-decoration-none p-3 border rounded d-flex align-items-center bg-light-hover transition">
                                <i class="bi bi-buildings-fill text-success me-3"></i>
                                <span class="text-dark fw-medium">Centers Hub</span>
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="DeletedItems" asp-controller="SuperAdmin" class="text-decoration-none p-3 border rounded d-flex align-items-center bg-light-hover transition">
                                <i class="bi bi-trash-fill text-secondary me-3"></i>
                                <span class="text-dark fw-medium">Archive / Trash</span>
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <a asp-action="Index" asp-controller="Item" class="text-decoration-none p-3 border rounded d-flex align-items-center bg-light-hover transition">
                                <i class="bi bi-box-seam-fill text-info me-3"></i>
                                <span class="text-dark fw-medium">Inventory Items</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>