@model Moshrefy.Web.Models.Center.UpdateCenterVM
@{
    ViewData["Title"] = "Edit Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Centers</div>
        <h2 class="page-title"><i class="ti ti-edit"></i> Edit Center</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><i class="ti ti-building me-2"></i>Update Center Information</h3>
      </div>
      <form asp-action="EditCenter" asp-route-id="@ViewContext.RouteData.Values["id"]" method="post" id="editCenterForm">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label" asp-for="Name"><i class="ti ti-building text-primary me-1"></i>@Html.DisplayNameFor(m => m.Name)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-building"></i></span>
                  <input asp-for="Name" class="form-control" placeholder="Enter center name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Phone"><i class="ti ti-phone text-success me-1"></i>@Html.DisplayNameFor(m => m.Phone)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-phone"></i></span>
                  <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                </div>
                <span asp-validation-for="Phone" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Address"><i class="ti ti-map-pin text-danger me-1"></i>@Html.DisplayNameFor(m => m.Address)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-map-pin"></i></span>
                  <input asp-for="Address" class="form-control" placeholder="Enter address" />
                </div>
                <span asp-validation-for="Address" class="text-danger"></span>
              </div>
            </div>

            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label" asp-for="Email"><i class="ti ti-mail text-info me-1"></i>@Html.DisplayNameFor(m => m.Email)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-mail"></i></span>
                  <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
                <small class="form-hint">Optional</small>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Description"><i class="ti ti-file-text text-secondary me-1"></i>@Html.DisplayNameFor(m => m.Description)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-file-text"></i></span>
                  <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description (optional)"></textarea>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
                <small class="form-hint">Optional</small>
              </div>

              <div class="mb-3">
                <label class="form-check form-switch">
                  <input type="checkbox" asp-for="IsActive" class="form-check-input">
                  <span class="form-check-label"><i class="ti ti-toggle-right me-1"></i>@Html.DisplayNameFor(m => m.IsActive)</span>
                </label>
                <small class="form-hint">Toggle to activate or deactivate this center</small>
              </div>
            </div>
          </div>
        </div>

        <div class="card-footer text-end">
          <a asp-action="CenterDetails" asp-route-centerId="@ViewContext.RouteData.Values["id"]" class="btn btn-secondary me-2">
            <i class="ti ti-arrow-left"></i> Back to Details
          </a>
          <button type="button" id="updateCenterBtn" class="btn btn-action-edit" onclick="validateAndUpdate()">
            <i class="ti ti-device-floppy"></i> Update Center
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function validateAndUpdate() {
            var form = $('#editCenterForm');
            form.validate();
            if (form.valid()) {
                var name = $('#Name').val();
                Swal.fire({ title: 'Update Center?', html: 'Save changes to <strong>' + name + '</strong>?', icon: 'question', showCancelButton: true, confirmButtonColor: '#f39c12', confirmButtonText: '<i class="ti ti-device-floppy"></i> Yes, Update' })
                .then((r) => { if (r.isConfirmed) { $('#updateCenterBtn').prop('disabled', true).html('<i class="ti ti-loader"></i> Updating...'); form.submit(); } });
            }
        }
    </script>
}
