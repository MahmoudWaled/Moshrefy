@model Moshrefy.Web.Models.User.CreateUserVM
@{
    ViewData["Title"] = "Create User for Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var preSelectedCenter = ViewBag.PreSelectedCenter as bool? ?? false;
    var centerName = ViewBag.CenterName as string;
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Users</div>
        <h2 class="page-title"><i class="ti ti-user-plus"></i> Create User for Center</h2>
      </div>
      <div class="col-auto ms-auto">
        <a asp-action="Users" class="btn btn-outline-secondary">
          <i class="ti ti-arrow-left"></i> Back to Users
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    @if (preSelectedCenter && !string.IsNullOrEmpty(centerName))
    {
      <div class="row mb-3">
        <div class="col-12">
          <div class="alert alert-info">
            <div class="d-flex align-items-center">
              <i class="ti ti-building icon me-2" style="font-size: 1.5rem;"></i>
              <div>
                <strong>Creating user for:</strong> @centerName
                <div class="text-muted small">The center has been pre-selected</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    }

    <form asp-action="CreateUserForCenter" method="post">
      <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
          <!-- Center & Role Selection Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-primary text-white me-3">
                  <i class="ti ti-building"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Center & Role</h3>
                  <small class="text-muted">Assign user to center with role</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label required" asp-for="CenterId">Select Center</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-building"></i></span>
                    <select asp-for="CenterId" asp-items="Model.Centers" class="form-select">
                      <option value="">-- Select a Center --</option>
                    </select>
                  </div>
                  <span asp-validation-for="CenterId" class="text-danger small"></span>
                  <small class="form-hint">@(preSelectedCenter ? "Center is pre-selected. You can change if needed." : "Select the center this user will belong to")</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label required" asp-for="RoleName">User Role</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-tag"></i></span>
                    <select asp-for="RoleName" class="form-select">
                      <option value="">-- Select a Role --</option>
                      <option value="Manager">Manager</option>
                      <option value="Employee">Employee</option>
                    </select>
                  </div>
                  <span asp-validation-for="RoleName" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Personal Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-info text-white me-3">
                  <i class="ti ti-user"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Personal Information</h3>
                  <small class="text-muted">User account details</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label required" asp-for="Name">Full Name</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-user"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                  </div>
                  <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label required" asp-for="UserName">Username</label>
                  <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                  </div>
                  <span asp-validation-for="UserName" class="text-danger small"></span>
                  <small class="form-hint">Used for login. Must be unique.</small>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" asp-for="Email">Email Address</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-mail"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="user@example.com" />
                  </div>
                  <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890" />
                  </div>
                  <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Security Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-warning text-white me-3">
                  <i class="ti ti-lock"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Security</h3>
                  <small class="text-muted">Login credentials</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label required" asp-for="Password">Password</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-lock"></i></span>
                  <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
                <small class="form-hint">Minimum 6 characters. The user can change this later.</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
          <!-- Role Description Card -->
          <div class="card mb-3">
            <div class="card-header">
              <h3 class="card-title"><i class="ti ti-info-circle me-2"></i>Role Permissions</h3>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <h5 class="mb-2"><span class="badge bg-role-manager py-2 px-3"><i class="ti ti-settings me-1"></i>Manager</span></h5>
                <p class="text-muted small mb-0">Senior team member with additional permissions for managing tasks.</p>
              </div>
              <hr>
              <div>
                <h5 class="mb-2"><span class="badge bg-role-employee py-2 px-3"><i class="ti ti-user me-1"></i>Employee</span></h5>
                <p class="text-muted small mb-0">Regular team member for handling day-to-day tasks.</p>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="card">
            <div class="card-body">
              <div class="d-grid gap-2">
                @if (Model.CenterId.HasValue && Model.CenterId.Value > 0)
                {
                  <a asp-action="CenterUsers" asp-route-centerId="@Model.CenterId" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left"></i> Back to Center Users
                  </a>
                }
                else
                {
                  <a asp-action="Users" class="btn btn-outline-secondary">
                    <i class="ti ti-x"></i> Cancel
                  </a>
                }
                <button type="submit" class="btn btn-action-create">
                  <i class="ti ti-user-plus"></i> Create User
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
