@model Moshrefy.Web.Models.User.UpdateUserVM
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = ViewBag.UserId as string;
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Users</div>
        <h2 class="page-title"><i class="ti ti-edit"></i> Edit User</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">User Information</h3>
          </div>
          <form asp-action="EditUser" asp-route-id="@userId" method="post">
            <div class="card-body">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

              <div class="mb-3">
                <label class="form-label" asp-for="Name"><i class="ti ti-user me-1"></i>Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="UserName"><i class="ti ti-at me-1"></i>Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <small class="form-hint">Used for login. Must be unique.</small>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Email"><i class="ti ti-mail me-1"></i>Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="user@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="PhoneNumber"><i class="ti ti-phone me-1"></i>Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="CenterId"><i class="ti ti-building me-1"></i>Center</label>
                <select asp-for="CenterId" asp-items="Model.Centers" class="form-select">
                  <option value="">-- Select a Center (Optional) --</option>
                </select>
                <span asp-validation-for="CenterId" class="text-danger"></span>
                <small class="form-hint">Assign or change the center for this user</small>
              </div>

              <div class="mb-3">
                <label class="form-check form-switch">
                  <input type="checkbox" asp-for="IsActive" class="form-check-input">
                  <span class="form-check-label"><i class="ti ti-toggle-right me-1"></i>User is Active</span>
                </label>
                <small class="form-hint">Inactive users cannot login to the system</small>
              </div>

              <div class="alert alert-info">
                <div class="d-flex">
                  <div><i class="ti ti-info-circle icon me-2"></i></div>
                  <div><strong>Note:</strong> Changes will be saved and the user will be updated immediately.</div>
                </div>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Users" class="btn btn-secondary me-2">
                <i class="ti ti-arrow-left"></i> Back to List
              </a>
              <a asp-action="UserDetails" asp-route-id="@userId" class="btn btn-outline-secondary me-2">
                <i class="ti ti-x"></i> Cancel
              </a>
              <button type="submit" class="btn btn-action-edit">
                <i class="ti ti-device-floppy"></i> Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
