@model Moshrefy.Web.Models.User.UpdateUserVM
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = ViewBag.UserId as string;
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Users</div>
        <h2 class="page-title"><i class="ti ti-user-edit"></i> Edit User</h2>
      </div>
      <div class="col-auto ms-auto">
        <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
          <i class="ti ti-arrow-left"></i> Back
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <form asp-action="EditUser" asp-route-id="@userId" method="post">
      <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
          <!-- Personal Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-primary text-white me-3">
                  <i class="ti ti-user"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Personal Information</h3>
                  <small class="text-muted">Basic user details</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label required" asp-for="Name">Full Name</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-user"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                  </div>
                  <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label required" asp-for="UserName">Username</label>
                  <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                  </div>
                  <span asp-validation-for="UserName" class="text-danger small"></span>
                  <small class="form-hint">Used for login. Must be unique.</small>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-info text-white me-3">
                  <i class="ti ti-address-book"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Contact Information</h3>
                  <small class="text-muted">Contact details</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label" asp-for="Email">Email Address</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-mail"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="user@example.com" />
                  </div>
                  <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="ti ti-phone"></i></span>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890" />
                  </div>
                  <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Center Assignment Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-warning text-white me-3">
                  <i class="ti ti-building"></i>
                </span>
                <div>
                  <h3 class="card-title mb-0">Center Assignment</h3>
                  <small class="text-muted">Assign user to a center</small>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <label class="form-label" asp-for="CenterId">Center</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="ti ti-building"></i></span>
                  <select asp-for="CenterId" asp-items="Model.Centers" class="form-select">
                    <option value="">-- Select a Center (Optional) --</option>
                  </select>
                </div>
                <span asp-validation-for="CenterId" class="text-danger small"></span>
                <small class="form-hint">Assign or change the center for this user</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
          <!-- Status Card -->
          <div class="card mb-3">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <span class="avatar bg-success text-white me-3">
                  <i class="ti ti-toggle-right"></i>
                </span>
                <h3 class="card-title mb-0">Status</h3>
              </div>
            </div>
            <div class="card-body">
              <label class="form-selectgroup-item flex-fill d-block">
                <div class="form-check form-switch">
                  <input type="checkbox" asp-for="IsActive" class="form-check-input">
                  <span class="form-check-label">
                    <strong>User Active</strong>
                    <div class="text-muted small">Inactive users cannot login</div>
                  </span>
                </div>
              </label>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="card">
            <div class="card-body">
              <div class="d-grid gap-2">
                <button type="button" onclick="goBack()" class="btn btn-outline-secondary">
                  <i class="ti ti-x"></i> Cancel
                </button>
                <button type="submit" class="btn btn-action-edit">
                  <i class="ti ti-device-floppy"></i> Save Changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                window.location.href = '@Url.Action("Users", "SuperAdmin")';
            }
        }
    </script>
}

<style>
  .required::after {
    content: " *";
    color: #dc3545;
  }
</style>
