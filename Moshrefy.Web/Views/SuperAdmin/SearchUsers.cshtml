@{
    ViewData["Title"] = "Search Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: 'â€º';">
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Users" class="text-decoration-none text-muted small">
                                Users
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            Search
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-dark mb-0 me-3">
                        <i class="bi bi-search me-2"></i>Search Users
                    </h2>
                </div>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-flex gap-2 justify-content-md-end">
                    <a asp-action="Users" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
                        <i class="bi bi-chevron-left me-1"></i> Back to Users
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Page body -->
<div class="row">
    <div class="col-lg-6">
        <!-- Search by Email -->
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-primary opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Search by Email</h3>
                </div>
            </div>
            <div class="card-body">
                <form id="searchByEmailForm">
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" id="emailInput" class="form-control" placeholder="user@example.com" required>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Search by Username -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-info opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-at"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Search by Username</h3>
                </div>
            </div>
            <div class="card-body">
                <form id="searchByUsernameForm">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text">@@</span>
                            <input type="text" id="usernameInput" class="form-control" placeholder="username" required>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Column -->
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h3 class="card-title h5 mb-0 fw-semibold">
                    <i class="bi bi-person-check me-2 text-primary"></i>Search Result
                </h3>
            </div>
            <div class="card-body" id="searchResultContainer">
                <div class="text-center text-muted py-5">
                    <i class="bi bi-search fs-1 mb-3 d-block opacity-50"></i>
                    <p>Enter an email or username to search for a user</p>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Toast")

@section Scripts {
    <script>
        const token = $('input[name="__RequestVerificationToken"]').val();

        // Search by Email
        $('#searchByEmailForm').on('submit', function(e) {
            e.preventDefault();
            const email = $('#emailInput').val().trim();
            if (!email) return;

            showLoading();
            $.post('@Url.Action("SearchUserByEmail")', { email: email, __RequestVerificationToken: token })
                .done(function(res) {
                    if (res.success) {
                        displayUser(res.user);
                    } else {
                        displayError(res.message || 'User not found');
                    }
                })
                .fail(function() {
                    displayError('Server connection error');
                });
        });

        // Search by Username
        $('#searchByUsernameForm').on('submit', function(e) {
            e.preventDefault();
            const username = $('#usernameInput').val().trim();
            if (!username) return;

            showLoading();
            $.post('@Url.Action("SearchUserByUsername")', { username: username, __RequestVerificationToken: token })
                .done(function(res) {
                    if (res.success) {
                        displayUser(res.user);
                    } else {
                        displayError(res.message || 'User not found');
                    }
                })
                .fail(function() {
                    displayError('Server connection error');
                });
        });

        function showLoading() {
            $('#searchResultContainer').html(`
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-3 text-muted">Searching...</p>
                </div>
            `);
        }

        function displayError(message) {
            $('#searchResultContainer').html(`
                <div class="alert alert-warning d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    ${message}
                </div>
            `);
        }

        function displayUser(user) {
            const statusBadge = user.isDeleted 
                ? '<span class="badge bg-danger">Deleted</span>'
                : user.isActive 
                    ? '<span class="badge bg-success">Active</span>' 
                    : '<span class="badge bg-secondary">Inactive</span>';

            $('#searchResultContainer').html(`
                <div class="d-flex align-items-center mb-4">
                    <span class="d-flex align-items-center justify-content-center bg-primary-subtle text-primary rounded-circle me-3" style="width: 64px; height: 64px;">
                        <i class="bi bi-person fs-3"></i>
                    </span>
                    <div>
                        <h4 class="mb-1">${user.name || 'N/A'}</h4>
                        <span class="text-muted">@@${user.userName}</span>
                        <div class="mt-1">${statusBadge}</div>
                    </div>
                </div>
                <hr>
                <div class="row g-3">
                    <div class="col-6">
                        <label class="text-muted small">Email</label>
                        <div>${user.email || 'N/A'}</div>
                    </div>
                    <div class="col-6">
                        <label class="text-muted small">Phone</label>
                        <div>${user.phoneNumber || 'N/A'}</div>
                    </div>
                    <div class="col-6">
                        <label class="text-muted small">Center</label>
                        <div>${user.centerName || 'N/A'}</div>
                    </div>
                    <div class="col-6">
                        <label class="text-muted small">Role</label>
                        <div>${user.roleName || 'N/A'}</div>
                    </div>
                </div>
                <hr>
                <div class="d-grid gap-2">
                    <a href="@Url.Action("UserDetails")/${user.id}" class="btn btn-primary">
                        <i class="bi bi-eye me-1"></i> View Details
                    </a>
                    <a href="@Url.Action("EditUser")/${user.id}" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil me-1"></i> Edit User
                    </a>
                </div>
            `);
        }
    </script>
}
