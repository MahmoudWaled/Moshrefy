@model Moshrefy.Web.Models.Center.CenterVM
@{
    ViewData["Title"] = "Center Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-8">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: '›';">
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Centers" class="text-decoration-none text-muted small">
                                Centers
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            @Model.Name
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-dark mb-0 me-3">
                        @Model.Name
                    </h2>
                </div>
            </div>

            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                <div class="d-flex gap-2 justify-content-md-end">
                    <button type="button" onclick="goBack()" class="btn btn-outline-secondary btn-sm px-3 shadow-sm">
                        <i class="bi bi-chevron-left me-1"></i> Back
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Page body -->
<div class="row">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Status Banner -->
        <div class="card mb-3 shadow-sm px-1 @(Model.IsActive ? "border-success-subtle" : "border-secondary")">
            <div class="card-body py-3">
                <div class="d-flex align-items-center">
                    @if (Model.IsActive)
                    {
                        <span class="d-flex align-items-center justify-content-center bg-success-subtle text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-check-lg fs-4 text-success "></i>
                        </span>
                        <div>
                            <h3 class="mb-0 text-success">Active Center</h3>
                            <small class="text-muted">This center is operational</small>
                        </div>
                    }
                    else
                    {
                        <span class="d-flex align-items-center justify-content-center bg-secondary-subtle text-white rounded-circle me-3" style="width: 48px; height: 48px;">
                            <i class="bi bi-x-lg fs-4 text-secondary"></i>
                        </span>
                        <div>
                            <h3 class="mb-0 text-secondary">Inactive Center</h3>
                            <small class="text-muted">This center is not operational</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Center Information Card -->
        <div class="card mb-3 shadow-sm border-0 p-3">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-primary opacity-75 text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-building"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold text-secondary-emphasis">Center Information</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3 ">
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-building me-1"></i> Center Name
                            </label>
                            <div class="h4 mb-0  text-muted  ">@Model.Name</div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-telephone me-1"></i> Phone
                            </label>
                            <div class="h5 mb-0 text-muted ">@Model.Phone</div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-envelope me-1 "></i> Email
                            </label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email" class="fw-bold text-decoration-none text-muted ">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-bottom ">
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-geo-alt me-1"></i> Address
                            </label>
                            <div class="fw-bold text-muted ">@Model.Address</div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="col-12">
                            <label class="form-label text-muted small mb-1">
                                <i class="bi bi-file-text me-1"></i> Description
                            </label>
                            <p class="mb-0 fw-bold text-muted ">@Model.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Audit Trail Card -->
        <div class="card shadow-sm border-0 p-3">
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center">
                    <span class="d-flex align-items-center justify-content-center bg-secondary text-white rounded me-3" style="width: 40px; height: 40px;">
                        <i class="bi bi-clock-history"></i>
                    </span>
                    <h3 class="card-title h5 mb-0 fw-semibold">Audit Trail</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="d-flex align-items-center justify-content-center bg-success bg-opacity-10 text-success rounded me-3" style="width: 36px; height: 36px;">
                                <i class="bi bi-plus-lg"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Created By</div>
                                <div class="fw-medium">@(Model.CreatedByName ?? "N/A")</div>
                                <div class="text-muted small">@Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                            </div>
                        </div>
                    </div>
                    @if (Model.ModifiedAt.HasValue && !string.IsNullOrEmpty(Model.ModifiedByName))
                    {
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="d-flex align-items-center justify-content-center bg-warning bg-opacity-10 text-warning rounded me-3" style="width: 36px; height: 36px;">
                                    <i class="bi bi-pencil"></i>
                                </div>
                                <div>
                                    <div class="text-muted small">Last Modified By</div>
                                    <div class="fw-medium">@Model.ModifiedByName</div>
                                    <div class="text-muted small">@Model.ModifiedAt.Value.ToLocalTime().ToString("MMM dd, yyyy 'at' hh:mm tt")</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-header bg-transparent py-3 border-bottom-0">
                <h3 class="card-title h6 mb-0 fw-bold">
                    <i class="bi bi-gear-wide-connected me-2 text-primary"></i>Actions
                </h3>
            </div>
            <div class="card-body d-grid gap-2 pt-0">

                <a asp-action="CenterUsers" asp-route-centerId="@Model.Id"
                   class="btn btn-light border-0 py-2 shadow-sm text-dark fw-medium">
                    <i class="bi bi-people-fill me-2 text-primary"></i> View Center Users
                </a>

                <a asp-action="EditCenter" asp-route-id="@Model.Id"
                   class="btn btn-light border-0 py-2 shadow-sm text-dark fw-medium">
                    <i class="bi bi-pencil-square me-2 text-primary"></i> Edit Center Details
                </a>

                <hr class="my-1 opacity-25">

                @if (Model.IsActive)
                {
                    <button onclick="deactivateCenter()" class="btn btn-light text-decoration-none text-dark py-2 fw-medium">
                        <i class="bi bi-pause-circle me-2"></i> Deactivate Center
                    </button>
                }
                else
                {
                    <button onclick="activateCenter()" class="btn btn-light text-decoration-none text-success py-2 fw-medium">
                        <i class="bi bi-check-circle me-2"></i> Activate Center
                    </button>
                }

                <hr class="my-1 opacity-25">

                @if (Model.IsDeleted)
                {
                    <button onclick="RestoreCenter()" class="btn btn-light text-decoration-none text-success-emphasis py-2 fw-medium">
                        <i class="bi bi-recycle"></i> Restore from Trash
                    </button>
                }
                else
                {

                    <button onclick="softDeleteCenter()" class="btn btn-light text-decoration-none text-warning-emphasis py-2 fw-medium">
                        <i class="bi bi-trash3 me-2"></i> Move to Trash
                    </button>
                }

                <button onclick="hardDeleteCenter()" class="btn btn-light text-decoration-none text-danger py-2 fw-medium">
                    <i class="bi bi-exclamation-octagon me-2"></i> Permanent Delete
                </button>

            </div>
        </div>

        <div class="alert alert-light border-0 border-start border-danger border-4 shadow-sm mb-0">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle text-danger me-2 fs-5"></i>
                <p class="mb-0 small text-muted">
                    Deleting center data is irreversible and affects all academic records.
                </p>
            </div>
        </div>
    </div>
</div>


<!-- Modals -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="mTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body py-3">
                <p id="mBody" class="mb-3 text-muted"></p>
                <div id="inputSection" class="d-none">
                    <label class="small fw-bold mb-1">Type <span class="text-danger">Delete</span> to confirm:</label>
                    <input type="text" id="mInput" class="form-control">
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="mBtn" class="btn shadow-sm text-white">Submit</button>
            </div>
        </div>
    </div>
</div>

<!-- Toasts -->
<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
                const token = $('input[name="__RequestVerificationToken"]').val();
                let currentUrl = "";

                function openModal(title, body, btnClass, url, needInput = false) {
                    currentUrl = url;
                    $('#mTitle').text(title);
                    $('#mBody').html(body);
                    $('#mBtn').attr('class', 'btn shadow-sm text-white ' + btnClass);
                    $('#inputSection').toggleClass('d-none', !needInput);
                    $('#mBtn').prop('disabled', needInput);
                    $('#mInput').val('');
                    new bootstrap.Modal('#confirmModal').show();
                }

                // Buttons Actions
                function activateCenter()   { openModal('Activate?', 'Are you sure you want to activate  <strong>@Model.Name</strong>?', 'btn-success', '@Url.Action("ActivateCenter")'); }
                function deactivateCenter() { openModal('Deactivate?', 'Are you sure you want to Deactivate  <strong>@Model.Name</strong>?', 'btn-warning', '@Url.Action("DeactivateCenter")'); }
                function softDeleteCenter() { openModal('Move to Trash?', 'Move to trash?', 'btn-warning', '@Url.Action("SoftDeleteCenter")', true); }
                function hardDeleteCenter() { openModal('PERMANENT DELETE', 'Delete forever?', 'btn-danger', '@Url.Action("HardDeleteCenter")', true); }
                function RestoreCenter()     { openModal('Restore Center?', 'Restore this center from trash?', 'btn-info', '@Url.Action("RestoreCenter")'); }
                // Validation & Execution
                $('#mInput').on('input', function() { $('#mBtn').prop('disabled', $(this).val().toLowerCase() !== 'delete'); });

                        $('#mBtn').click(function() {
            $.post(currentUrl, { id: @Model.Id, __RequestVerificationToken: token }, (res) => {
                if (res.success) {
                    showAlert(res.message || "Operation successful!");
                    setTimeout(() => {
                        window.location.href = (currentUrl.includes('Delete') ? '@Url.Action("Centers")' : window.location.href);
                    }, 1000);
                } else {
                    showAlert(res.message || "Error occurred", false);
                }
            });
        });

                function goBack() { window.history.length > 1 ? window.history.back() : window.location.href = '@Url.Action("Centers")'; }

                function showAlert(message, isSuccess = true) {
            const toastEl = document.getElementById('liveToast');
            const toast = new bootstrap.Toast(toastEl);

            toastEl.classList.remove('bg-success', 'bg-danger');
            toastEl.classList.add(isSuccess ? 'bg-success' : 'bg-danger');

            document.getElementById('toastMessage').innerText = message;
            toast.show();
        }


    </script>
}