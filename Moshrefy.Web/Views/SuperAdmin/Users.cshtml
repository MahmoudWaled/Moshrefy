@model PaginatedResult<Moshrefy.Web.Models.User.UserVM>

@{
    ViewData["Title"] = "User Management";
    var status = Context.Request.Query["status"].ToString().ToLower();
}

<!-- Page Header -->
<div class="bg-white p-4 mb-4 shadow-sm border-bottom">
    <div class="container-fluid">
        <div class="row align-items-center">

            <div class="col-md-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2" style="--bs-breadcrumb-divider: '›';">
                        <li class="breadcrumb-item">
                            <a asp-controller="SuperAdmin" asp-action="Index" class="text-decoration-none text-muted small">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="breadcrumb-item active small fw-medium text-primary" aria-current="page">
                            Users
                        </li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center">
                    <h2 class="h4 fw-bold text-dark mb-0 me-3">
                        User Management
                    </h2>
                </div>
            </div>

            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                <div class="d-flex gap-2 justify-content-md-end">
                    <a asp-action="SearchUsers" class="btn btn-light d-none d-sm-inline-flex align-items-center">
                        <i class="bi bi-search me-1"></i> Search
                    </a>
                    <a asp-action="CreateCenterAdmin" class="btn btn-secondary d-none d-sm-inline-flex align-items-center">
                        <i class="bi bi-shield-check me-1"></i> Create Center Admin
                    </a>
                    <a asp-action="CreateUserForCenter" class="btn btn-success d-none d-sm-inline-flex align-items-center">
                        <i class="bi bi-person-plus me-1"></i> Create User
                    </a>
                    <a asp-action="CreateUserForCenter" class="btn btn-success d-sm-none">
                        <i class="bi bi-plus-lg"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<!-- Page body -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h3 class="card-title h5 mb-2 fw-semibold text-secondary-emphasis" id="cardTitle">All Users</h3>
                <div class="ms-auto d-flex align-items-center gap-3 justify-content-between ">
                    <!-- Page Size Dropdown -->
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label m-0 text-muted">Show</label>
                        <select class="form-select form-select-sm" style="width: auto;" id="pageSizeSelect"
                                onchange="window.location.href='@Url.Action("Users", "SuperAdmin")?PageNumber=1&status=@(status)&PageSize=' + this.value">
                            @foreach (var size in new[] { 10, 20, 30, 50, 100 })
                            {
                                if (Model.PageSize == size)
                                {
                                    <option value="@size" selected>@size</option>
                                }
                                else
                                {
                                    <option value="@size">@size</option>
                                }
                            }
                        </select>
                        <label class="form-label m-0 text-muted">entries</label>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="btn-group" role="group">
                        <a asp-action="Users"
                           asp-route-status="all"
                           asp-route-pageSize="@Model.PageSize"
                           class="btn btn-sm btn-outline-primary border @(string.IsNullOrEmpty(status) || status == "all" ? "active" : "")"
                           id="filterAll">
                            <i class="bi bi-list me-1"></i> All
                        </a>

                        <a asp-action="Users"
                           asp-route-status="active"
                           asp-route-pageSize="@Model.PageSize"
                           class="btn btn-sm btn-outline-primary border @(status == "active" ? "active" : "")"
                           id="filterActive">
                            Active
                        </a>

                        <a asp-action="Users"
                           asp-route-status="inactive"
                           asp-route-pageSize="@Model.PageSize"
                           class="btn btn-sm btn-outline-primary border @(status == "inactive" ? "active" : "")"
                           id="filterInactive">
                            Inactive
                        </a>

                        <a asp-action="Users"
                           asp-route-status="deleted"
                           asp-route-pageSize="@Model.PageSize"
                           class="btn btn-sm btn-outline-danger border @(status == "deleted" ? "active" : "")"
                           id="filterDeleted">
                            <i class="bi bi-trash me-1"></i> Deleted
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="usersTable">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().Name)</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().UserName)</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().CenterName)</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().RoleName)</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().IsActive)</th>
                                <th>@Html.DisplayNameFor(Model => Model.Items.First().CreatedAt)</th>
                                <th class="w-1">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var rowNumber = ((Model.PageNumber - 1) * Model.PageSize) + 1;
                            }
                            @foreach (var user in Model.Items)
                            {
                                <tr class="@(user.IsDeleted ? "table-danger" : "") ">
                                    <td class="text-secondary-emphasis">@(rowNumber++)</td>
                                    <td class="text-secondary-emphasis">
                                        <i class="bi bi-person text-primary me-1"></i>
                                        <strong>@user.Name</strong>
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        <code>@user.UserName</code>
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                        {
                                            <i class="bi bi-telephone text-success me-1"></i>@user.PhoneNumber
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        @if (!string.IsNullOrEmpty(user.CenterName))
                                        {
                                            <small>@user.CenterName</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        @if (!string.IsNullOrEmpty(user.RoleName))
                                        {
                                            <span class="text-muted">@user.RoleName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        @if (user.IsDeleted)
                                        {
                                            <span class="badge bg-danger">Deleted</span>
                                        }
                                        else if (user.IsActive)
                                        {
                                            <span>Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td class="text-secondary-emphasis">
                                        <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-light btn-sm">
                                            <i class="bi bi-eye"></i>
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            @await Html.PartialAsync("_Pagination", new PaginationVM
            {
                PageNumber = Model.PageNumber,
                PageSize = Model.PageSize,
                TotalCount = Model.TotalCount,
                ActionName = "Users",
                ControllerName = "SuperAdmin",
                ItemName = "users",
                ShowPageSizeDropdown = false,
                searchQuery = status
            })
        </div>
    </div>
</div>

@await Html.PartialAsync("_Toast")

@section Scripts {
    <script>
        $(document).ready(function () {
            var msg = '@TempData["SuccessMessage"]';
            if (msg) {
                showAlert(msg, true);
            }
        });
    </script>
}
