@model Moshrefy.Web.Models.Center.CreateCenterVM
@{
    ViewData["Title"] = "Create Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create New Center</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="SuperAdmin" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Centers">Centers</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- Create Center Form Card -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-building mr-1"></i>
                            Center Information
                        </h3>
                    </div>
                    <form asp-action="CreateCenter" method="post" id="createCenterForm">
                        <div class="card-body">
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle"></i>
                                    @TempData["ErrorMessage"]
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }

                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Center Name -->
                                    <div class="form-group">
                                        <label asp-for="Name" class="form-label">
                                            <i class="fas fa-building text-primary"></i> @Html.DisplayNameFor(model => model.Name)
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-building"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Name" class="form-control" placeholder="Enter center name" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>

                                    <!-- Phone Number -->
                                    <div class="form-group">
                                        <label asp-for="Phone" class="form-label">
                                            <i class="fas fa-phone text-success"></i> @Html.DisplayNameFor(model => model.Phone)
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-phone"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                        </div>
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                    </div>

                                    <!-- Address -->
                                    <div class="form-group">
                                        <label asp-for="Address" class="form-label">
                                            <i class="fas fa-map-marker-alt text-danger"></i> @Html.DisplayNameFor(model => model.Address)
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                                        </div>
                                        <span asp-validation-for="Address" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <!-- Email Address -->
                                    <div class="form-group">
                                        <label asp-for="Email" class="form-label">
                                            <i class="fas fa-envelope text-info"></i> @Html.DisplayNameFor(model => model.Email)
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-envelope"></i>
                                                </span>
                                            </div>
                                            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                        <small class="form-text text-muted">Optional</small>
                                    </div>

                                    <!-- Description -->
                                    <div class="form-group">
                                        <label asp-for="Description" class="form-label">
                                            <i class="fas fa-file-alt text-secondary"></i> @Html.DisplayNameFor(model => model.Description)
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-file-alt"></i>
                                                </span>
                                            </div>
                                            <textarea asp-for="Description" class="form-control textarea-resizable" rows="5" placeholder="Enter description (optional)"></textarea>
                                        </div>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                        <small class="form-text text-muted">Optional</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="row">
                                <div class="col-12">
                                    <a asp-action="Centers" class="btn btn-default">
                                        <i class="fas fa-arrow-left"></i> Back to List
                                    </a>
                                    <button type="button" id="createCenterBtn" class="btn btn-primary" onclick="validateAndShowModal()">
                                        <i class="fas fa-save"></i> Create Center
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Create Confirmation Modal -->
<div class="modal fade" id="confirmCreateModal" tabindex="-1" role="dialog" aria-labelledby="confirmCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="confirmCreateModalLabel">
                    <i class="fas fa-question-circle"></i> Confirm Create
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to create this center?</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Center Name:</strong> <span id="modalCenterName"></span>
                </div>
                <p class="text-muted">
                    <i class="fas fa-check-circle"></i>
                    The center will be created and set as active by default.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="submitForm()">
                    <i class="fas fa-save"></i> Yes, Create
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Validate form and show modal if valid
        function validateAndShowModal() {
            var form = $('#createCenterForm');
            
            // Trigger validation
            form.validate();
            
            // Check if form is valid
            if (form.valid()) {
                // Update modal with center name
                var centerName = $('#Name').val();
                if (centerName) {
                    $('#modalCenterName').text(centerName);
                } else {
                    $('#modalCenterName').text('(Not provided)');
                }
                
                // Show the modal
                $('#confirmCreateModal').modal('show');
            }
        }

        // Submit form function
        function submitForm() {
            var form = $('#createCenterForm');
            
            // Double-check validation
            if (form.valid()) {
                $('#confirmCreateModal').modal('hide');
                
                // Show loading spinner only if form is valid
                var submitBtn = $('#createCenterBtn');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Creating...');
                
                form.submit();
            } else {
                // Close modal and let user see validation errors
                $('#confirmCreateModal').modal('hide');
            }
        }

        // Reset button state when modal is closed without submission
        $('#confirmCreateModal').on('hidden.bs.modal', function () {
            var submitBtn = $('#createCenterBtn');
            submitBtn.prop('disabled', false);
            submitBtn.html('<i class="fas fa-save"></i> Create Center');
        });
    </script>
}
