@{
    ViewData["Title"] = "Inactive Users";
}

<!-- Page Header -->
<div class="page-header-modern">
    <div class="row g-2 align-items-center">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb-modern">
                    <li class="breadcrumb-item">
                        <a asp-controller="SuperAdmin" asp-action="Index"><i class="ti ti-home"></i> Dashboard</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="SuperAdmin" asp-action="Users">Users</a>
                        <i class="ti ti-chevron-right breadcrumb-separator ms-2"></i>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Inactive</li>
                </ol>
            </nav>
            <h2 class="page-title"><i class="ti ti-user-off"></i> Inactive Users</h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Users" class="btn">
                <i class="ti ti-arrow-left icon"></i> Back to All Users
            </a>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row row-deck row-cards">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><i class="ti ti-ban me-2"></i>Inactive Users List</h3>
          </div>
          <div class="card-body">
            <div class="alert alert-info">
              <div class="d-flex">
                <div><i class="ti ti-info-circle icon me-2"></i></div>
                <div><strong>About Inactive Users</strong><br>Inactive users are accounts that have been deactivated but not deleted. They cannot log in but can be reactivated at any time.</div>
              </div>
            </div>
            <div class="table-responsive">
              <table id="inactiveUsersTable" class="table table-vcenter table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th data-name="Name">Name</th>
                    <th data-name="UserName">Username</th>
                    <th data-name="PhoneNumber">Phone</th>
                    <th data-name="CenterName">Center</th>
                    <th data-name="RoleName">Role</th>
                    <th data-name="CreatedAt">Created</th>
                    <th class="w-1">Actions</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#inactiveUsersTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetInactiveUsersData", "SuperAdmin")',
                    type: 'POST',
                    error: function () { TablerDialog.fire({ icon: 'error', title: 'Error Loading Data', timer: 3000 }); }
                },
                columns: [
                    { data: null, orderable: false, searchable: false, className: 'text-center', render: function (d, t, r, m) { return '<span class="text-muted">' + (m.row + m.settings._iDisplayStart + 1) + '</span>'; } },
                    { data: 'name', name: 'Name', render: function (d) { return '<i class="ti ti-user text-warning me-1"></i> <strong>' + d + '</strong>'; } },
                    { data: 'userName', name: 'UserName', render: function (d) { return '<code>' + d + '</code>'; } },
                    { data: 'phoneNumber', name: 'PhoneNumber', render: function (d) { return d ? '<i class="ti ti-phone text-success me-1"></i>' + d : '<span class="text-muted">N/A</span>'; } },
                    { data: 'centerName', name: 'CenterName', render: function (d) { return d ? '<i class="ti ti-building text-info me-1"></i><small>' + d + '</small>' : '<span class="text-muted">N/A</span>'; } },
                    {
                        data: 'roleName', name: 'RoleName', className: 'text-center',
                        render: function (d) {
                            return '<span class="text-muted">' + d + '</span>';
                        }
                    },
                    { data: 'createdAt', name: 'CreatedAt', className: 'text-center', render: function (d) { return '<small class="text-muted"><i class="ti ti-clock me-1"></i>' + new Date(d).toLocaleDateString() + '</small>'; } },
                    {
                        data: null, orderable: false, className: 'text-center',
                        render: function (d, t, row) {
                            return '<div class="btn-group btn-group-sm">' +
                                '<a href="@Url.Action("UserDetails", "SuperAdmin")/' + row.id + '" class="btn btn-action-view" title="View"><i class="ti ti-eye"></i></a>' +
                                '<button class="btn btn-state-active" title="Activate" onclick="activateUser(\'' + row.id + '\', \'' + row.userName.replace(/'/g, "\\'") + '\')"><i class="ti ti-check"></i></button>' +
                                '</div>';
                        }
                    }
                ],
                pageLength: 25, order: [[7, 'desc']],
                language: {
                    search: '_INPUT_',
                    searchPlaceholder: 'Search users...',
                    lengthMenu: '_MENU_ entries',
                    info: 'Showing _START_ to _END_ of _TOTAL_ users',
                    infoEmpty: 'No inactive users',
                    infoFiltered: '(from _MAX_ total)',
                    zeroRecords: 'No matching users found',
                    emptyTable: '<div class=\"p-4 text-center\"><i class=\"ti ti-user-check\" style=\"font-size:4rem;color:#2fb344;\"></i><h4 class=\"text-success mt-3\">Great! No Inactive Users</h4><p class=\"text-muted\">All users are currently active.</p><a href=\"@Url.Action("Users", "SuperAdmin")\" class=\"btn btn-action-view\"><i class=\"ti ti-users\"></i> View All Users</a></div>',
                    paginate: { first: '«', last: '»', next: '›', previous: '‹' },
                    processing: '<div class="spinner-border text-primary" role="status"></div><span class="ms-2">Loading...</span>'
                }
            });
        });

        function activateUser(userId, userName) {
            TablerDialog.fire({ title: 'Activate User?', html: 'Activate <strong>' + userName + '</strong>?', icon: 'question', showCancelButton: true, confirmButtonColor: '#28a745', confirmButtonText: '<i class="ti ti-check"></i> Yes, Activate' })
            .then(function (r) { if (r.isConfirmed) { $.post('@Url.Action("ActivateUser", "SuperAdmin")', { id: userId }).done(function (res) { if (res.success) { TablerDialog.fire({ icon: 'success', title: 'Activated!', timer: 2000, showConfirmButton: false }); $('#inactiveUsersTable').DataTable().ajax.reload(); } }); } });
        }
    </script>
}
