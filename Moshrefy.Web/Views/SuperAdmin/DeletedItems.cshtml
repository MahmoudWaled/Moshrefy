@model Moshrefy.Web.Models.Statistics.SystemStatisticsVM
@{
    ViewData["Title"] = "Deleted Items Recovery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">System</div>
        <h2 class="page-title"><i class="ti ti-trash"></i> Deleted Items Recovery</h2>
      </div>
      <div class="col-auto ms-auto">
        <a asp-action="Index" class="btn btn-secondary"><i class="ti ti-arrow-left"></i> Back to Dashboard</a>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <!-- Summary Cards -->
    <div class="row row-deck row-cards mb-3">
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Deleted Teachers</div>
            </div>
            <div class="h1 mb-3">@Model.DeletedTeachers</div>
            <div class="d-flex mb-2">
              <span class="avatar bg-secondary-lt"><i class="ti ti-chalkboard"></i></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Deleted Students</div>
            </div>
            <div class="h1 mb-3">@Model.DeletedStudents</div>
            <div class="d-flex mb-2">
              <span class="avatar bg-secondary-lt"><i class="ti ti-school"></i></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Deleted Courses</div>
            </div>
            <div class="h1 mb-3">@Model.DeletedCourses</div>
            <div class="d-flex mb-2">
              <span class="avatar bg-secondary-lt"><i class="ti ti-book"></i></span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex align-items-center">
              <div class="subheader">Deleted Classrooms</div>
            </div>
            <div class="h1 mb-3">@Model.DeletedClassrooms</div>
            <div class="d-flex mb-2">
              <span class="avatar bg-secondary-lt"><i class="ti ti-door"></i></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Info Alert -->
    <div class="alert alert-info" role="alert">
      <div class="d-flex">
        <div><i class="ti ti-info-circle icon me-2"></i></div>
        <div>
          <h4 class="alert-title">Recovery Information</h4>
          <div class="text-muted">These items have been soft-deleted and can be restored. Data that has been permanently deleted cannot be recovered.</div>
        </div>
      </div>
    </div>

    <!-- Deleted Teachers Section -->
    <div class="card mb-3" id="teachers-section">
      <div class="card-header">
        <h3 class="card-title"><i class="ti ti-chalkboard me-2"></i>Deleted Teachers (@Model.DeletedTeachers)</h3>
      </div>
      <div class="card-body">
        @if (Model.DeletedTeachers > 0)
        {
          <div class="text-center py-4">
            <span class="avatar avatar-xl bg-azure-lt mb-3"><i class="ti ti-loader ti-spin"></i></span>
            <p class="text-muted">Feature under development</p>
          </div>
        }
        else
        {
          <div class="text-center py-5">
            <span class="avatar avatar-xl bg-success-lt mb-3"><i class="ti ti-check"></i></span>
            <p class="text-muted">No deleted teachers found</p>
          </div>
        }
      </div>
    </div>

    <!-- Deleted Students Section -->
    <div class="card mb-3" id="students-section">
      <div class="card-header">
        <h3 class="card-title"><i class="ti ti-school me-2"></i>Deleted Students (@Model.DeletedStudents)</h3>
      </div>
      <div class="card-body">
        @if (Model.DeletedStudents > 0)
        {
          <div class="text-center py-4">
            <span class="avatar avatar-xl bg-azure-lt mb-3"><i class="ti ti-loader ti-spin"></i></span>
            <p class="text-muted">Feature under development</p>
          </div>
        }
        else
        {
          <div class="text-center py-5">
            <span class="avatar avatar-xl bg-success-lt mb-3"><i class="ti ti-check"></i></span>
            <p class="text-muted">No deleted students found</p>
          </div>
        }
      </div>
    </div>

    <!-- Deleted Courses Section -->
    <div class="card mb-3" id="courses-section">
      <div class="card-header">
        <h3 class="card-title"><i class="ti ti-book me-2"></i>Deleted Courses (@Model.DeletedCourses)</h3>
      </div>
      <div class="card-body">
        @if (Model.DeletedCourses > 0)
        {
          <div class="text-center py-4">
            <span class="avatar avatar-xl bg-azure-lt mb-3"><i class="ti ti-loader ti-spin"></i></span>
            <p class="text-muted">Feature under development</p>
          </div>
        }
        else
        {
          <div class="text-center py-5">
            <span class="avatar avatar-xl bg-success-lt mb-3"><i class="ti ti-check"></i></span>
            <p class="text-muted">No deleted courses found</p>
          </div>
        }
      </div>
    </div>

    <!-- Deleted Classrooms Section -->
    <div class="card mb-3" id="classrooms-section">
      <div class="card-header">
        <h3 class="card-title"><i class="ti ti-door me-2"></i>Deleted Classrooms (@Model.DeletedClassrooms)</h3>
      </div>
      <div class="card-body">
        @if (Model.DeletedClassrooms > 0)
        {
          <div class="text-center py-4">
            <span class="avatar avatar-xl bg-azure-lt mb-3"><i class="ti ti-loader ti-spin"></i></span>
            <p class="text-muted">Feature under development</p>
          </div>
        }
        else
        {
          <div class="text-center py-5">
            <span class="avatar avatar-xl bg-success-lt mb-3"><i class="ti ti-check"></i></span>
            <p class="text-muted">No deleted classrooms found</p>
          </div>
        }
      </div>
    </div>
  </div>
</div>
