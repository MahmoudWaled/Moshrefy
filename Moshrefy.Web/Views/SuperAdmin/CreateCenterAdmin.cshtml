@model Moshrefy.Web.Models.User.CreateUserVM
@{
    ViewData["Title"] = "Create Center Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <div class="page-pretitle">Users</div>
        <h2 class="page-title"><i class="ti ti-shield-plus"></i> Create Center Admin</h2>
      </div>
    </div>
  </div>
</div>

<!-- Page body -->
<div class="page-body">
  <div class="container-xl">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Admin Information</h3>
          </div>
          <form asp-action="CreateCenterAdmin" method="post">
            <div class="card-body">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>

              <div class="mb-3">
                <label class="form-label" asp-for="CenterId"><i class="ti ti-building me-1"></i>Select Center <span class="text-danger">*</span></label>
                <select asp-for="CenterId" asp-items="Model.Centers" class="form-select">
                  <option value="">-- Select a Center --</option>
                </select>
                <span asp-validation-for="CenterId" class="text-danger"></span>
                <small class="form-hint">Select the center this admin will manage</small>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Name"><i class="ti ti-user me-1"></i>Full Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="UserName"><i class="ti ti-at me-1"></i>Username <span class="text-danger">*</span></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <small class="form-hint">Used for login. Must be unique.</small>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Email"><i class="ti ti-mail me-1"></i>Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="admin@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="PhoneNumber"><i class="ti ti-phone me-1"></i>Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+1234567890" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
              </div>

              <div class="mb-3">
                <label class="form-label" asp-for="Password"><i class="ti ti-lock me-1"></i>Password <span class="text-danger">*</span></label>
                <input asp-for="Password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="form-hint">Minimum 6 characters. The admin can change this later.</small>
              </div>

              <input type="hidden" asp-for="RoleName" value="Admin" />

              <div class="alert alert-info">
                <div class="d-flex"><div><i class="ti ti-info-circle icon me-2"></i></div><div><strong>Note:</strong> This will create an admin user with full management rights for the selected center.</div></div>
              </div>
            </div>

            <div class="card-footer text-end">
              <a asp-action="Users" class="btn btn-secondary me-2"><i class="ti ti-x"></i> Cancel</a>
              <button type="submit" class="btn btn-role-admin"><i class="ti ti-device-floppy"></i> Create Admin</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
