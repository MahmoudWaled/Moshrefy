@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="error-page">
    <div class="error-content-wrapper">
        <div class="text-center mb-4">
            <div class="error-number">
                <i class="fas fa-ban"></i>
            </div>
        </div>

        <h3 class="text-center mb-3">
            <i class="fas fa-exclamation-triangle text-warning"></i> Access Denied
        </h3>

        <div class="card">
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="icon fas fa-ban"></i> Unauthorized Access</h5>
                    <p class="mb-0">
                        You don't have permission to access this resource. This area is restricted to authorized users only.
                    </p>
                </div>

                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Possible Reasons:</h6>
                    <ul class="mb-0">
                        <li>Your user role doesn't have the required permissions</li>
                        <li>Your role was recently changed - try logging out and back in</li>
                        <li>You're trying to access a different center's resources</li>
                        <li>The resource has been restricted by an administrator</li>
                    </ul>
                </div>

                <div class="text-center mt-4">
                    <a href="javascript:history.back()" class="btn btn-secondary mr-2">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mr-2">
                        <i class="fas fa-home"></i> Go to Dashboard
                    </a>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                </div>

                <hr class="my-4">

                <div class="text-center text-muted">
                    <small>
                        <i class="fas fa-question-circle"></i>
                        If you believe this is an error, please contact your system administrator.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
